        <div class="server-card">
            <h3>üìä Server Console</h3>
            <div class="console" id="console-output">
                <div class="log-entry">
                    <span class="timestamp">[12:00:00]</span> System: Panel initialized
                </div>
            </div>
            <div style="display: flex; gap: 10px;">
                <input type="text" id="console-input" placeholder="Enter command..." style="flex: 1; padding: 10px; border: 1px solid #cbd5e0; border-radius: 5px;">
                <button class="btn btn-console" onclick="sendCommand()">Send</button>
            </div>
        </div>
    </div>

    <script>
        // Sprawd≈∫ autoryzacjƒô
        const token = localStorage.getItem('auth_token');
        if (!token) {
            window.location.href = '/login.html';
        }

        // Update stats periodically
        function updateStats() {
            fetch('/api/stats', {
                headers: {
                    'Authorization': 'Bearer ' + token
                }
            })
            .then(response => {
                if (!response.ok) throw new Error('Auth failed');
                return response.json();
            })
            .then(data => {
                document.getElementById('cpu-usage').textContent = data.cpu + '%';
                document.getElementById('memory-usage').textContent = data.memory + '%';
                document.getElementById('active-servers').textContent = data.active_servers;
                
                // Update server statuses
                updateServerStatus('fivem', data.servers.fivem);
                updateServerStatus('minecraft', data.servers.minecraft);
                updateServerStatus('discord', data.servers.discord);
            })
            .catch(error => {
                console.error('Error fetching stats:', error);
                logout();
            });
        }
        
        function updateServerStatus(server, data) {
            const statusElement = document.getElementById(server + '-status');
            const startBtn = document.querySelector(`[onclick="controlServer('${server}', 'start')"]`);
            const stopBtn = document.querySelector(`[onclick="controlServer('${server}', 'stop')"]`);
            
            if (data.status === 'running') {
                statusElement.textContent = 'RUNNING';
                statusElement.className = 'status status-running';
                startBtn.style.display = 'none';
                stopBtn.style.display = 'block';
            } else {
                statusElement.textContent = 'STOPPED';
                statusElement.className = 'status status-stopped';
                startBtn.style.display = 'block';
                stopBtn.style.display = 'none';
            }
            
            if (server === 'fivem' && data.players !== undefined) {
                document.getElementById('fivem-players').textContent = data.players + '/32';
            }
            
            if (data.uptime) {
                document.getElementById(server + '-uptime').textContent = data.uptime;
            }
        }
        
        function controlServer(server, action) {
            fetch('/api/control', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': 'Bearer ' + token
                },
                body: JSON.stringify({
                    server: server,
                    action: action
                })
            })
            .then(response => {
                if (!response.ok) throw new Error('Auth failed');
                return response.json();
            })
            .then(data => {
                addLog(`Server ${server}: ${action} command sent`);
                updateStats();
            })
            .catch(error => {
                addLog(`Error: ${error}`);
                logout();
            });
        }
        
        function showConsole(server) {
            fetch(`/api/console/${server}`, {
                headers: {
                    'Authorization': 'Bearer ' + token
                }
            })
            .then(response => {
                if (!response.ok) throw new Error('Auth failed');
                return response.json();
            })
            .then(data => {
                const consoleOutput = document.getElementById('console-output');
                consoleOutput.innerHTML = '';
                data.logs.forEach(log => {
                    addLog(log, false);
                });
            })
            .catch(error => {
                logout();
            });
        }
        
        function sendCommand() {
            const input = document.getElementById('console-input');
            const command = input.value.trim();
            if (command) {
                addLog(`> ${command}`);
                input.value = '';
                
                fetch('/api/command', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': 'Bearer ' + token
                    },
                    body: JSON.stringify({
                        command: command
                    })
                });
            }
        }
        
        function addLog(message, scroll = true) {
            const consoleOutput = document.getElementById('console-output');
            const timestamp = new Date().toLocaleTimeString();
            const logEntry = document.createElement('div');
            logEntry.className = 'log-entry';
            logEntry.innerHTML = `<span class="timestamp">[${timestamp}]</span> ${message}`;
            consoleOutput.appendChild(logEntry);
            
            if (scroll) {
                consoleOutput.scrollTop = consoleOutput.scrollHeight;
            }
        }
        
        function logout() {
            localStorage.removeItem('auth_token');
            window.location.href = '/login.html';
        }
        
        // Initialize
        setInterval(updateStats, 2000);
        updateStats();
        
        document.getElementById('console-input').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                sendCommand();
            }
        });
    </script>
</body>
</html>
EOF

    create_api_scripts
}

create_api_scripts() {
    # G≈Ç√≥wny skrypt API z autoryzacjƒÖ
    cat > "$WEB_DIR/api.py" << 'EOF'
#!/usr/bin/env python3
from http.server import HTTPServer, BaseHTTPRequestHandler
import json
import os
import subprocess
import time
import sqlite3
import hashlib
import jwt
import datetime
from urllib.parse import urlparse, parse_qs

PANEL_DIR = os.path.expanduser("~/game-panel")
LOG_DIR = os.path.join(PANEL_DIR, "logs")
SERVER_DIR = os.path.join(PANEL_DIR, "servers")
DB_PATH = os.path.join(PANEL_DIR, "database", "users.db")
JWT_SECRET = "your-secret-key-change-in-production"

class GamePanelHandler(BaseHTTPRequestHandler):
    def do_GET(self):
        if self.path == '/':
            self.serve_file('login.html')
        elif self.path == '/dashboard.html':
            if not self.authenticate():
                return
            self.serve_file('dashboard.html')
        elif self.path == '/api/stats':
            if not self.authenticate():
                return
            self.serve_stats()
        elif self.path.startswith('/api/console/'):
            if not self.authenticate():
                return
            server = self.path.split('/')[-1]
            self.serve_console(server)
        else:
            self.serve_file(self.path[1:])
    
    def do_POST(self):
        if self.path == '/api/login':
            self.handle_login()
        elif self.path == '/api/register':
            self.handle_register()
        elif self.path == '/api/control':
            if not self.authenticate():
                return
            self.handle_control()
        elif self.path == '/api/command':
            if not self.authenticate():
                return
            self.handle_command()
        else:
            self.send_error(404)
    
    def authenticate(self):
        auth_header = self.headers.get('Authorization')
        if not auth_header or not auth_header.startswith('Bearer '):
            self.send_auth_error()
            return False
        
        token = auth_header.split(' ')[1]
        try:
            payload = jwt.decode(token, JWT_SECRET, algorithms=['HS256'])
            self.user_id = payload['user_id']
            return True
        except:
            self.send_auth_error()
            return False
    
    def send_auth_error(self):
        self.send_response(401)
        self.send_header('Content-type', 'application/json')
        self.end_headers()
        self.wfile.write(json.dumps({"error": "Unauthorized"}).encode('utf-8'))
    
    def serve_file(self, filename):
        try:
            if filename == '':
                filename = 'login.html'
                
            filepath = os.path.join(PANEL_DIR, 'web', filename)
            if os.path.exists(filepath):
                with open(filepath, 'rb') as f:
                    content = f.read()
                
                content_type = 'text/html'
                if filename.endswith('.css'):
                    content_type = 'text/css'
                elif filename.endswith('.js'):
                    content_type = 'application/javascript'
                elif filename.endswith('.png'):
                    content_type = 'image/png'
                elif filename.endswith('.jpg'):
                    content_type = 'image/jpeg'
                
                self.send_response(200)
                self.send_header('Content-type', content_type)
                self.end_headers()
                self.wfile.write(content)
            else:
                self.send_error(404)
        except Exception as e:
            self.send_error(500, str(e))
    
    def handle_login(self):
        content_length = int(self.headers['Content-Length'])
        post_data = self.rfile.read(content_length)
        data = json.loads(post_data.decode('utf-8'))
        
        username = data.get('username')
        password = data.get('password')
        
        conn = sqlite3.connect(DB_PATH)
        cursor = conn.cursor()
        
        cursor.execute('SELECT id, password_hash FROM users WHERE username = ?', (username,))
        user = cursor.fetchone()
        conn.close()
        
        if user and user[1] == hashlib.sha256(password.encode()).hexdigest():
            token = jwt.encode({
                'user_id': user[0],
                'username': username,
                'exp': datetime.datetime.utcnow() + datetime.timedelta(hours=24)
            }, JWT_SECRET, algorithm='HS256')
            
            self.send_json_response({"success": True, "token": token})
        else:
            self.send_json_response({"success": False, "error": "Invalid credentials"})
    
    def handle_register(self):
        content_length = int(self.headers['Content-Length'])
        post_data = self.rfile.read(content_length)
        data = json.loads(post_data.decode('utf-8'))
        
        username = data.get('username')
        password = data.get('password')
        email = data.get('email')
        
        if not username or not password:
            self.send_json_response({"success": False, "error": "Username and password required"})
            return
        
        password_hash = hashlib.sha256(password.encode()).hexdigest()
        
        conn = sqlite3.connect(DB_PATH)
        cursor = conn.cursor()
        
        try:
            cursor.execute(
                'INSERT INTO users (username, password_hash, email) VALUES (?, ?, ?)',
                (username, password_hash, email)
            )
            conn.commit()
            self.send_json_response({"success": True})
        except sqlite3.IntegrityError:
            self.send_json_response({"success": False, "error": "Username already exists"})
        finally:
            conn.close()
    
    def serve_stats(self):
        stats = {
            "cpu": self.get_cpu_usage(),
            "memory": self.get_memory_usage(),
            "active_servers": self.get_active_servers_count(),
            "total_servers": 3,
            "servers": {
                "fivem": self.get_server_status("fivem"),
                "minecraft": self.get_server_status("minecraft"),
                "discord": self.get_server_status("discord")
            }
        }
        
        self.send_json_response(stats)
    
    def serve_console(self, server):
        log_file = os.path.join(LOG_DIR, f"{server}.log")
        logs = []
        if os.path.exists(log_file):
            with open(log_file, 'r') as f:
                logs = f.readlines()[-50:]
        self.send_json_response({"logs": logs})
    
    def handle_control(self):
        content_length = int(self.headers['Content-Length'])
        post_data = self.rfile.read(content_length)
        data = json.loads(post_data.decode('utf-8'))
        
        server = data.get('server')
        action = data.get('action')
        
        result = self.control_server(server, action)
        self.send_json_response({"status": "success", "result": result})
    
    def handle_command(self):
        content_length = int(self.headers['Content-Length'])
        post_data = self.rfile.read(content_length)
        data = json.loads(post_data.decode('utf-8'))
        
        command = data.get('command')
        with open(os.path.join(LOG_DIR, "commands.log"), "a") as f:
            f.write(f"[{datetime.datetime.now()}] Command: {command}\n")
        
        self.send_json_response({"status": "received"})
    
    def send_json_response(self, data):
        self.send_response(200)
        self.send_header('Content-type', 'application/json')
        self.send_header('Access-Control-Allow-Origin', '*')
        self.end_headers()
        self.wfile.write(json.dumps(data).encode('utf-8'))
    
    def log_message(self, format, *args):
        pass
    
    # System monitoring functions
    def get_cpu_usage(self):
        try:
            result = subprocess.run(['mpstat', '1', '1'], capture_output=True, text=True)
            lines = result.stdout.split('\n')
            for line in lines:
                if 'all' in line:
                    parts = line.split()
                    idle = float(parts[-1])
                    return round(100 - idle, 1)
        except:
            pass
        return round(20.5, 1)
    
    def get_memory_usage(self):
        try:
            result = subprocess.run(['free'], capture_output=True, text=True)
            lines = result.stdout.split('\n')
            if len(lines) >= 2:
                parts = lines[1].split()
                total = int(parts[1])
                used = int(parts[2])
                return round((used / total) * 100, 1)
        except:
            pass
        return round(45.2, 1)
    
    def get_active_servers_count(self):
        count = 0
        servers = ["fivem", "minecraft", "discord"]
        for server in servers:
            if self.is_server_running(server):
                count += 1
        return count
    
    def get_server_status(self, server):
        status = {
            "status": "running" if self.is_server_running(server) else "stopped",
            "uptime": "2h 30m",
            "players": 0
        }
        
        if server == "fivem":
            status["players"] = 3
        elif server == "minecraft":
            status["players"] = 2
        
        return status
    
    def is_server_running(self, server):
        try:
            result = subprocess.run(['screen', '-list'], capture_output=True, text=True)
            return server in result.stdout
        except:
            return False
    
    def control_server(self, server, action):
        script_path = os.path.join(PANEL_DIR, "scripts", f"{server}_{action}.sh")
        if os.path.exists(script_path):
            subprocess.Popen(['bash', script_path])
            return f"{action} command sent to {server}"
        return f"No script found for {server} {action}"

def start_web_server():
    port = 8080
    server = HTTPServer(('0.0.0.0', port), GamePanelHandler)
    print(f"üåê Game Panel dostƒôpny pod: http://0.0.0.0:{port}")
    print(f"üîê Domy≈õlne konto: admin / admin123")
    server.serve_forever()

if __name__ == '__main__':
    start_web_server()
EOF

    chmod +x "$WEB_DIR/api.py"
}

create_control_scripts() {
    echo -e "${YELLOW}‚öôÔ∏è Tworzenie skrypt√≥w kontrolnych...${NC}"
    
    # FiveM scripts
    cat > "$SCRIPTS_DIR/fivem_start.sh" << 'EOF'
#!/bin/bash
PANEL_DIR="$HOME/game-panel"
LOG_DIR="$PANEL_DIR/logs"

echo "$(date): Starting FiveM server..." >> "$LOG_DIR/fivem.log"

cd "$PANEL_DIR/servers/fivem"

# Upewnij siƒô ≈ºe serwer FiveM jest pobrany
if [ ! -f "run.sh" ]; then
    echo "$(date): FiveM not installed, running installer..." >> "$LOG_DIR/fivem.log"
    bash "$PANEL_DIR/scripts/install_fivem.sh"
fi

# Uruchom serwer FiveM w screen session
screen -dmS fivem bash -c "bash run.sh 2>&1 | tee -a $LOG_DIR/fivem_console.log"

echo "$(date): FiveM server started in screen session" >> "$LOG_DIR/fivem.log"
echo "FiveM started"
EOF

    cat > "$SCRIPTS_DIR/fivem_stop.sh" << 'EOF'
#!/bin/bash
PANEL_DIR="$HOME/game-panel"
LOG_DIR="$PANEL_DIR/logs"

echo "$(date): Stopping FiveM server..." >> "$LOG_DIR/fivem.log"

# Wy≈õlij polecenie zatrzymania do konsoli FiveM
screen -S fivem -X stuff "quit^M"
sleep 10

# Je≈õli nadal dzia≈Ça, wymu≈õ zamkniƒôcie
if screen -list | grep -q "fivem"; then
    screen -S fivem -X quit
    echo "$(date): FiveM server force stopped" >> "$LOG_DIR/fivem.log"
else
    echo "$(date): FiveM server stopped gracefully" >> "$LOG_DIR/fivem.log"
fi

echo "FiveM stopped"
EOF

    cat > "$SCRIPTS_DIR/fivem_restart.sh" << 'EOF'
#!/bin/bash
bash $HOME/game-panel/scripts/fivem_stop.sh
sleep 5
bash $HOME/game-panel/scripts/fivem_start.sh
echo "FiveM restarted"
EOF

    # Minecraft scripts
    cat > "$SCRIPTS_DIR/minecraft_start.sh" << 'EOF'
#!/bin/bash
echo "Starting Minecraft server..."
cd $HOME/game-panel/servers/minecraft
screen -dmS minecraft bash -c "java -Xmx1G -Xms512M -jar server.jar nogui"
echo "Minecraft started"
EOF

    cat > "$SCRIPTS_DIR/minecraft_stop.sh" << 'EOF'
#!/bin/bash
echo "Stopping Minecraft server..."
screen -S minecraft -X stuff "stop\n"
sleep 5
screen -S minecraft -X quit
echo "Minecraft stopped"
EOF

    # Discord bot scripts
    cat > "$SCRIPTS_DIR/discord_start.sh" << 'EOF'
#!/bin/bash
echo "Starting Discord bot..."
cd $HOME/game-panel/servers/discord-bot
screen -dmS discord-bot bash -c "node bot.js"
echo "Discord bot started"
EOF

    cat > "$SCRIPTS_DIR/discord_stop.sh" << 'EOF'
#!/bin/bash
echo "Stopping Discord bot..."
screen -S discord-bot -X quit
pkill -f "node.*bot.js"
echo "Discord bot stopped"
EOF

    chmod +x $SCRIPTS_DIR/*.sh
}

