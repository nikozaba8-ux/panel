#!/bin/bash

# ==============================================
# GAME PANEL - PTERODACTYL LIKE WITH NGINX
# Web Interface on port 80 (Nginx)
# ==============================================

# Konfiguracja
PANEL_DIR="$HOME/game-panel"
WEB_DIR="$PANEL_DIR/web"
SERVER_DIR="$PANEL_DIR/servers"
LOG_DIR="$PANEL_DIR/logs"
DB_DIR="$PANEL_DIR/database"
CONFIG_DIR="$PANEL_DIR/config"
NGINX_DIR="$PANEL_DIR/nginx"
USERS_FILE="$DB_DIR/users.json"

# Porty
WEB_PORT=80
SSL_PORT=443

# Kolory
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
PURPLE='\033[0;35m'
NC='\033[0m'

# Funkcja tworzÄ…ca strukturÄ™
create_structure() {
    echo -e "${PURPLE}ðŸ› ï¸  Tworzenie struktury panelu...${NC}"
    
    mkdir -p $WEB_DIR $SERVER_DIR $LOG_DIR $DB_DIR $CONFIG_DIR $NGINX_DIR
    mkdir -p $SERVER_DIR/fivem $SERVER_DIR/minecraft $SERVER_DIR/python $SERVER_DIR/node
    
    create_nginx_config
    create_web_interface
    create_config_files
    init_database
}

create_nginx_config() {
    echo -e "${YELLOW}ðŸŒ Konfiguracja Nginx...${NC}"
    
    # GÅ‚Ã³wna konfiguracja Nginx
    cat > "$NGINX_DIR/nginx.conf" << 'EOF'
worker_processes auto;
pid /tmp/nginx.pid;

events {
    worker_connections 1024;
    use epoll;
    multi_accept on;
}

http {
    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    # Logging
    access_log /tmp/nginx_access.log;
    error_log /tmp/nginx_error.log;

    # Basic Settings
    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    types_hash_max_size 2048;

    # Gzip Settings
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;

    # Upstream for panel
    upstream panel_backend {
        server 127.0.0.1:8080;
        keepalive 32;
    }

    # Server configuration
    server {
        listen 80 default_server;
        listen [::]:80 default_server;
        server_name _;

        # Security headers
        add_header X-Frame-Options "SAMEORIGIN" always;
        add_header X-XSS-Protection "1; mode=block" always;
        add_header X-Content-Type-Options "nosniff" always;
        add_header Referrer-Policy "no-referrer-when-downgrade" always;
        add_header Content-Security-Policy "default-src 'self' http: https: data: blob: 'unsafe-inline'" always;

        # Root directory
        root /home/codespace/game-panel/web;
        index index.html;

        # Panel API proxy
        location /api/ {
            proxy_pass http://panel_backend;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_cache_bypass $http_upgrade;
        }

        # Static files
        location /static/ {
            alias /home/codespace/game-panel/web/static/;
            expires 1y;
            add_header Cache-Control "public, immutable";
        }

        # Serve panel files
        location / {
            try_files $uri $uri/ /index.html;
        }

        # Error pages
        error_page 404 /404.html;
        error_page 500 502 503 504 /50x.html;
    }
}
EOF
}

