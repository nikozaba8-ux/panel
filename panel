#!/bin/bash
# manage-resources.sh

RESOURCES_DIR="/opt/fivem-assets/resources"

case $1 in
    "list")
        echo "Available resources:"
        ls -la $RESOURCES_DIR
        ;;
    "add")
        if [ -z "$2" ]; then
            echo "Usage: $0 add <git-repository-url>"
            exit 1
        fi
        cd $RESOURCES_DIR
        git clone $2
        echo "Resource added successfully"
        ;;
    "remove")
        if [ -z "$2" ]; then
            echo "Usage: $0 remove <resource-name>"
            exit 1
        fi
        rm -rf $RESOURCES_DIR/$2
        echo "Resource removed successfully"
        ;;
    *)
        echo "Usage: $0 {list|add|remove}"
        ;;
esac
