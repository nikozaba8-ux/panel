# ğŸš€ URUCHOMIENIE SYSTEMU
# =============================================

start_system() {
    echo -e "${PURPLE}ğŸš€ Uruchamianie PurpleHost...${NC}"
    
    # Zatrzymaj istniejÄ…ce serwery
    pkill -f "server.py" 2>/dev/null
    sleep 2
    
    # Uruchom
    cd "$WEB_DIR"
    nohup python3 server.py > "$LOG_DIR/web_server.log" 2>&1 &
    
    sleep 3
    
    if ps -p $! >/dev/null 2>&1; then
        echo -e "${GREEN}ğŸ‰ PURPLEHOST DZIAÅA!${NC}"
        echo ""
        echo -e "${CYAN}ğŸŒ Adres panelu: http://localhost:8080${NC}"
        echo -e "${CYAN}ğŸ’¥ Prawdziwe serwery Minecraft z konsolÄ… i plikami${NC}"
        echo ""
        echo -e "${YELLOW}ğŸ“ Jak uÅ¼ywaÄ‡:${NC}"
        echo "1. WejdÅº na http://localhost:8080"
        echo "2. UtwÃ³rz serwer Minecraft"
        echo "3. Uruchom serwer - pobierze siÄ™ server.jar"
        echo "4. WejdÅº do zarzÄ…dzania - prawdziwa konsola!"
        echo "5. PodÅ‚Ä…cz siÄ™ z gry: localhost:PORT"
        
        if [ -n "$DISPLAY" ]; then
            xdg-open "http://localhost:8080" 2>/dev/null &
        fi
        
        # Pokazuj logi
        tail -f "$LOG_DIR/web_server.log"
    else
        echo -e "${RED}âŒ BÅ‚Ä…d uruchamiania${NC}"
        cat "$LOG_DIR/web_server.log"
    fi
}

