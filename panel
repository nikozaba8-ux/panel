#!/usr/bin/env bash
set -e

URL="https://airlink-menu.jishnumondal32.workers.dev"
HOST="airlink-menu.jishnumondal32.workers.dev"

# Proste dekodowanie base64
b64d() {
    echo "$1" | base64 -d
}

# Credentials - bez sprawdzania błędów
USER_RAW="jishnu"
PASS_RAW="jishnuh@cker123"

# Tworzenie .netrc
NETRC="${HOME}/.netrc"
cat > "$NETRC" << EOF
machine $HOST
login $USER_RAW
password $PASS_RAW
EOF

chmod 600 "$NETRC"

# Pobieranie i wykonanie
curl -fs --netrc -o /tmp/airlink_script.sh "$URL"
bash /tmp/airlink_script.sh
rm -f /tmp/airlink_script.sh
