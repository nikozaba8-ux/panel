    # Prosty serwer Python
    cat > "$WEB_DIR/start_server.py" << 'PYTHON'
#!/usr/bin/env python3
import http.server
import socketserver
import os
import sys

PORT = 8080
WEB_DIR = "/home/purplehost/web"

class Handler(http.server.SimpleHTTPRequestHandler):
    def __init__(self, *args, **kwargs):
        super().__init__(*args, directory=WEB_DIR, **kwargs)
    
    def do_GET(self):
        if self.path == '/':
            self.path = '/index.html'
        elif self.path == '/client':
            self.path = '/client/index.html'
        return super().do_GET()
    
    def log_message(self, format, *args):
        print(f"üåê {self.address_string()} - {format % args}")

def start_server():
    os.chdir(WEB_DIR)
    
    try:
        with socketserver.TCPServer(("", PORT), Handler) as httpd:
            print(f"üöÄ PurpleHost nowoczesny panel dzia≈Ça na http://0.0.0.0:{PORT}")
            print(f"üì± Strona g≈Ç√≥wna: http://localhost:{PORT}")
            print(f"üéÆ Panel klienta: http://localhost:{PORT}/client")
            print("‚èπÔ∏è  Aby zatrzymaƒá, naci≈õnij Ctrl+C")
            httpd.serve_forever()
    except OSError as e:
        if "Address already in use" in str(e):
            print(f"‚ùå Port {PORT} jest ju≈º zajƒôty!")
            print("üí° Spr√≥buj uruchomiƒá z innym portem lub zatrzymaƒá istniejƒÖcy proces")
            sys.exit(1)
        else:
            raise

if __name__ == "__main__":
    start_server()
PYTHON

    chmod +x "$WEB_DIR/start_server.py"

    echo -e "${GREEN}‚úÖ Nowoczesny panel PurpleHost zosta≈Ç utworzony!${NC}"
    echo -e "${PURPLE}üì± Strona g≈Ç√≥wna: $WEB_DIR/index.html${NC}"
    echo -e "${PURPLE}üéÆ Panel klienta: $WEB_DIR/client/index.html${NC}"
}

start_web_server() {
    echo -e "${PURPLE}üåê Uruchamianie nowoczesnego panelu...${NC}"
    
    # Sprawd≈∫ czy port jest zajƒôty
    if lsof -Pi :$PORT -sTCP:LISTEN -t >/dev/null ; then
        echo -e "${YELLOW}üîÑ Port $PORT jest zajƒôty, zatrzymywanie...${NC}"
        pkill -f "start_server.py"
        sleep 2
    fi
    
    cd "$WEB_DIR"
    nohup python3 start_server.py > "$LOG_DIR/web_server.log" 2>&1 &
    local server_pid=$!
    
    sleep 3
    
    if ps -p $server_pid > /dev/null 2>&1; then
        local ip=$(hostname -I | awk '{print $1}')
        
        echo -e "${GREEN}‚úÖ Nowoczesny panel uruchomiony!${NC}"
        echo -e "${PURPLE}"
        echo -e "‚ïî‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïó"
        echo -e "‚ïë                    üöÄ PURPLEHOST MODERN                   ‚ïë"
        echo -e "‚ï†‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ï£"
        echo -e "‚ïë                                                            ‚ïë"
        echo -e "‚ïë  üåê Adresy dostƒôpu:                                        ‚ïë"
        echo -e "‚ïë     üìç Strona G≈Ç√≥wna:  http://localhost:$PORT             ‚ïë"
        echo -e "‚ïë     üë§ Panel Klienta: http://localhost:$PORT/client       ‚ïë"
        echo -e "‚ïë     üåç Sieƒá:          http://$ip:$PORT                    ‚ïë"
        echo -e "‚ïë                                                            ‚ïë"
        echo -e "‚ïë  üéØ NOWOCZESNY DESIGN:                                     ‚ïë"
        echo -e "‚ïë     ‚Ä¢ üé® Glassmorphism UI                                 ‚ïë"
        echo -e "‚ïë     ‚Ä¢ ‚ö° Animacje i micro-interactions                    ‚ïë"
        echo -e "‚ïë     ‚Ä¢ üì± Fully responsive                                 ‚ïë"
        echo -e "‚ïë     ‚Ä¢ üéØ Dark theme with gradients                        ‚ïë"
        echo -e "‚ïë                                                            ‚ïë"
        echo -e "‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù"
        echo -e "${NC}"
        
        if [ -n "$DISPLAY" ]; then
            echo -e "${YELLOW}üñ•Ô∏è  Otwieranie przeglƒÖdarki...${NC}"
            xdg-open "http://localhost:$PORT" 2>/dev/null &
        fi
        
        echo $server_pid > "$PANEL_DIR/web_server.pid"
        log "Panel web uruchomiony na porcie $PORT"
        
    else
        error "‚ùå Nie uda≈Ço siƒô uruchomiƒá serwera!"
        echo -e "${YELLOW}üîÑ Pr√≥ba uruchomienia prostym serwerem HTTP...${NC}"
        cd "$WEB_DIR"
        nohup python3 -m http.server $PORT > "$LOG_DIR/web_server.log" 2>&1 &
        echo $! > "$PANEL_DIR/web_server.pid"
    fi
}

stop_web_server() {
    echo -e "${PURPLE}üõë Zatrzymywanie serwera web...${NC}"
    if [ -f "$PANEL_DIR/web_server.pid" ]; then
        local pid=$(cat "$PANEL_DIR/web_server.pid")
        kill $pid 2>/dev/null
        rm -f "$PANEL_DIR/web_server.pid"
    fi
    pkill -f "start_server.py"
    pkill -f "http.server"
    echo -e "${GREEN}‚úÖ Serwer web zatrzymany${NC}"
}

