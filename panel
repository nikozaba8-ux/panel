# üöÄ URUCHOMIENIE SYSTEMU
# =============================================

start_system() {
    echo -e "${PURPLE}üöÄ Uruchamianie PurpleHost...${NC}"
    
    # Zatrzymaj istniejƒÖce serwery
    pkill -f "server.py" 2>/dev/null
    sleep 2
    
    # Uruchom
    cd "$WEB_DIR"
    nohup python3 server.py > "$LOG_DIR/web_server.log" 2>&1 &
    
    sleep 3
    
    if ps -p $! >/dev/null 2>&1; then
        echo -e "${GREEN}üéâ PURPLEHOST DZIA≈ÅA!${NC}"
        echo ""
        echo -e "${CYAN}üåê Adres panelu: http://localhost:8080${NC}"
        echo -e "${CYAN}üí• Prawdziwe serwery Minecraft z AUTO-WGRYWANIEM plik√≥w${NC}"
        echo -e "${CYAN}üñ•Ô∏è  Pe≈Çnoekranowy panel konsoli${NC}"
        echo ""
        echo -e "${YELLOW}üöÄ NOWO≈öCI:${NC}"
        echo "‚úÖ Automatyczne wgrywanie wszystkich potrzebnych plik√≥w"
        echo "‚úÖ Pe≈Çnoekranowa konsola z maksymalnƒÖ rozdzielczo≈õciƒÖ"
        echo "‚úÖ Auto-pobieranie server.jar z Mojang"
        echo "‚úÖ Kompletna konfiguracja server.properties, eula.txt"
        echo "‚úÖ Status serwera w czasie rzeczywistym"
        echo ""
        echo -e "${YELLOW}üìù Jak u≈ºywaƒá:${NC}"
        echo "1. Wejd≈∫ na http://localhost:8080"
        echo "2. Utw√≥rz serwer Minecraft"
        echo "3. Kliknij 'ZarzƒÖdzaj' i 'Start Serwer'"
        echo "4. System SAM wgra wszystkie pliki i uruchomi serwer"
        echo "5. Pod≈ÇƒÖcz siƒô z gry: localhost:PORT"
        
        if [ -n "$DISPLAY" ]; then
            xdg-open "http://localhost:8080" 2>/dev/null &
        fi
        
        # Pokazuj logi
        tail -f "$LOG_DIR/web_server.log"
    else
        echo -e "${RED}‚ùå B≈ÇƒÖd uruchamiania${NC}"
        cat "$LOG_DIR/web_server.log"
    fi
}

