# Funkcja sprzÄ…tania
cleanup() {
    echo -e "\n${YELLOW}ğŸ›‘ Zatrzymywanie panelu...${NC}"
    stop_web_panel
    rm -f "$PANEL_PID_FILE"
    echo -e "${GREEN}âœ… Panel zatrzymany${NC}"
    exit 0
}

