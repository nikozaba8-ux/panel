}

create_servers() {
    echo -e "${YELLOW}üéÆ Przygotowywanie serwer√≥w...${NC}"
    
    # Minecraft server setup
    if [ ! -f "$SERVER_DIR/minecraft/server.jar" ]; then
        mkdir -p "$SERVER_DIR/minecraft"
        echo "‚õèÔ∏è  Downloading Minecraft server..."
        wget -q -O "$SERVER_DIR/minecraft/server.jar" \
            "https://piston-data.mojang.com/v1/objects/8dd1a28015f51b1803213892b50b7b4fc76e594d/server.jar"
        echo "eula=true" > "$SERVER_DIR/minecraft/eula.txt"
        
        # Create startup script for Minecraft
        cat > "$SERVER_DIR/minecraft/start.sh" << 'EOF'
#!/bin/bash
java -Xmx1024M -Xms1024M -jar server.jar nogui
EOF
        chmod +x "$SERVER_DIR/minecraft/start.sh"
    fi
    
    # Discord bot setup
    cat > "$SERVER_DIR/discord-bot/bot.js" << 'EOF'
const { Client, GatewayIntentBits } = require('discord.js');

console.log('ü§ñ Discord Bot starting...');

const client = new Client({
    intents: [GatewayIntentBits.Guilds, GatewayIntentBits.GuildMessages]
});

client.once('ready', () => {
    console.log(`‚úÖ Bot ready: ${client.user.tag}`);
    console.log('üïπÔ∏è  Game Panel Bot is online!');
});

// Demo mode - don't actually login without token
console.log('üî∂ Running in demo mode');
console.log('üí° Set DISCORD_BOT_TOKEN to connect to Discord');

// Keep the process alive
setInterval(() => {
    console.log('ü§ñ Bot heartbeat...');
}, 60000);
EOF

    cat > "$SERVER_DIR/discord-bot/package.json" << 'EOF'
{
    "name": "discord-bot",
    "version": "1.0.0",
    "description": "Game Panel Discord Bot",
    "main": "bot.js",
    "scripts": {
        "start": "node bot.js"
    },
    "dependencies": {
        "discord.js": "^14.14.1"
    }
}
EOF
}

start_web_panel() {
    echo -e "${GREEN}üåê Uruchamianie panelu web na porcie $WEB_PORT...${NC}"
    
    # Sprawd≈∫ czy Python jest dostƒôpny
    if ! command -v python3 &> /dev/null; then
        echo -e "${YELLOW}üì¶ Instalowanie Pythona...${NC}"
        sudo apt-get update > /dev/null 2>&1
        sudo apt-get install -y python3 python3-pip > /dev/null 2>&1
    fi
    
    # Zainstaluj zale≈ºno≈õci Pythona
    pip3 install pyjwt > /dev/null 2>&1
    
    # Uruchom serwer web
    cd "$WEB_DIR"
    python3 api.py &
    WEB_PID=$!
    echo $WEB_PID > "$PANEL_DIR/web.pid"
    
    echo -e "${GREEN}‚úÖ Panel web uruchomiony!${NC}"
    echo -e "${CYAN}üì± Adres: http://localhost:$WEB_PORT${NC}"
    echo -e "${CYAN}üîê Login: admin / admin123${NC}"
    echo -e "${CYAN}üåê Public URL: Check Codespaces Ports tab${NC}"
}

stop_web_panel() {
    if [ -f "$PANEL_DIR/web.pid" ]; then
        kill $(cat "$PANEL_DIR/web.pid") 2>/dev/null
        rm "$PANEL_DIR/web.pid"
        echo -e "${GREEN}‚úÖ Panel web zatrzymany${NC}"
    fi
}

install_fivem() {
    echo -e "${YELLOW}üöó Instalowanie serwera FiveM...${NC}"
    bash "$SCRIPTS_DIR/install_fivem.sh"
}

show_status() {
    echo -e "${CYAN}=== üéÆ STATUS PANELU ===${NC}"
    
    # Check web panel
    if [ -f "$PANEL_DIR/web.pid" ] && kill -0 $(cat "$PANEL_DIR/web.pid") 2>/dev/null; then
        echo -e "üåê Web Panel: ${GREEN}RUNNING${NC} (port $WEB_PORT)"
    else
        echo -e "üåê Web Panel: ${RED}STOPPED${NC}"
    fi
    
    # Check servers
    servers=("fivem" "minecraft" "discord-bot")
    for server in "${servers[@]}"; do
        if screen -list | grep -q "$server"; then
            echo -e "üéÆ $server: ${GREEN}RUNNING${NC}"
        else
            echo -e "üéÆ $server: ${RED}STOPPED${NC}"
        fi
    done
    
    # Check FiveM installation
    if [ -f "$SERVER_DIR/fivem/run.sh" ]; then
        echo -e "üöó FiveM: ${GREEN}INSTALLED${NC}"
    else
        echo -e "üöó FiveM: ${YELLOW}NOT INSTALLED${NC}"
    fi
}

main_menu() {
    while true; do
        clear
        echo -e "${PURPLE}"
        echo -e "‚ïî‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïó"
        echo -e "‚ïë           üïπÔ∏è GAME PANEL            ‚ïë"
        echo -e "‚ïë           Pterodactyl-like          ‚ïë"
        echo -e "‚ïë        With FiveM & Auth System     ‚ïë"
        echo -e "‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù"
        echo -e "${NC}"
        
        show_status
        echo ""
        
        echo -e "${BLUE}1. üöÄ Start Web Panel${NC}"
        echo -e "${BLUE}2. üõë Stop Web Panel${NC}"
        echo -e "${BLUE}3. üöó Install FiveM Server${NC}"
        echo -e "${BLUE}4. üåê Open in Browser${NC}"
        echo -e "${BLUE}5. üõ†Ô∏è  Reinstall Panel${NC}"
        echo -e "${BLUE}6. üìä Show Logs${NC}"
        echo -e "${BLUE}0. ‚ùå Exit${NC}"
        echo ""
        read -p "Wybierz opcjƒô [0-6]: " choice
        
        case $choice in
            1)
                if [ ! -d "$WEB_DIR" ]; then
                    create_structure
                fi
                start_web_panel
                ;;
            2)
                stop_web_panel
                ;;
            3)
                install_fivem
                ;;
            4)
                echo -e "${CYAN}üåê Otwieranie przeglƒÖdarki...${NC}"
                echo -e "${YELLOW}üìã Adres: http://localhost:$WEB_PORT${NC}"
                echo -e "${YELLOW}üîê Login: admin / admin123${NC}"
                ;;
            5)
                echo -e "${YELLOW}üõ†Ô∏è  Przeinstalowywanie panelu...${NC}"
                rm -rf $PANEL_DIR
                create_structure
                ;;
            6)
                tail -f $LOG_DIR/*.log
                ;;
            0)
                stop_web_panel
                echo -e "${GREEN}üëã Do widzenia!${NC}"
                exit 0
                ;;
            *)
                echo -e "${RED}‚ùå Nieprawid≈Çowy wyb√≥r${NC}"
                ;;
        esac
        read -p "Naci≈õnij Enter aby kontynuowaƒá..."
    done
}

# Main execution
if [ "$1" = "install" ]; then
    create_structure
    start_web_panel
elif [ "$1" = "start" ]; then
    start_web_panel
elif [ "$1" = "stop" ]; then
    stop_web_panel
elif [ "$1" = "fivem" ]; then
    install_fivem
else
    main_menu
fi
