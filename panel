    # Prosty serwer HTTP bez API (Å¼eby uniknÄ…Ä‡ bÅ‚Ä™dÃ³w JSON)
    cat > "$WEB_DIR/start_server.py" << 'PYTHON'
#!/usr/bin/env python3
import http.server
import socketserver
import os
import json

PORT = 8080
WEB_DIR = "/home/purplehost/web"

class SimpleHTTPRequestHandler(http.server.SimpleHTTPRequestHandler):
    def __init__(self, *args, **kwargs):
        super().__init__(*args, directory=WEB_DIR, **kwargs)
    
    def do_GET(self):
        # ObsÅ‚uga podstawowych Å›cieÅ¼ek
        if self.path == '/':
            self.path = '/index.html'
        elif self.path == '/client':
            self.path = '/client/index.html'
        
        return super().do_GET()
    
    def do_POST(self):
        # Prosta obsÅ‚uga POST dla formularzy (bez API)
        if self.path == '/api/create_server':
            self.handle_create_server()
        else:
            self.send_error(404)
    
    def handle_create_server(self):
        try:
            content_length = int(self.headers['Content-Length'])
            post_data = self.rfile.read(content_length)
            
            # Symulacja sukcesu
            response = {
                "success": True,
                "message": "Serwer utworzony pomyÅ›lnie (symulacja)",
                "server_id": 12345
            }
            
            self.send_response(200)
            self.send_header('Content-type', 'application/json')
            self.end_headers()
            self.wfile.write(json.dumps(response).encode('utf-8'))
            
        except Exception as e:
            self.send_response(500)
            self.send_header('Content-type', 'application/json')
            self.end_headers()
            self.wfile.write(json.dumps({"success": False, "error": str(e)}).encode('utf-8'))

def start_server():
    os.chdir(WEB_DIR)
    
    with socketserver.TCPServer(("", PORT), SimpleHTTPRequestHandler) as httpd:
        print(f"ğŸŸ£ PurpleHost Server dziaÅ‚a na porcie {PORT}")
        print(f"ğŸŒ Strona gÅ‚Ã³wna: http://localhost:{PORT}")
        print(f"ğŸ‘¤ Panel klienta: http://localhost:{PORT}/client")
        httpd.serve_forever()

if __name__ == "__main__":
    start_server()
PYTHON

