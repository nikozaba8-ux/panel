    <script>
        // Check authentication
        const sessionToken = localStorage.getItem('session_token');
        if (!sessionToken) {
            window.location.href = '/login.html';
        }

        // Load user info
        async function loadUserInfo() {
            try {
                const response = await fetch('/api/auth/me', {
                    headers: {
                        'Authorization': 'Bearer ' + sessionToken
                    }
                });
                
                if (!response.ok) {
                    throw new Error('Not authenticated');
                }
                
                const data = await response.json();
                document.getElementById('username').textContent = data.username;
            } catch (error) {
                logout();
            }
        }

        function logout() {
            localStorage.removeItem('session_token');
            window.location.href = '/login.html';
        }

        // Update stats periodically
        async function updateStats() {
            try {
                const response = await fetch('/api/stats', {
                    headers: {
                        'Authorization': 'Bearer ' + sessionToken
                    }
                });
                
                if (!response.ok) {
                    throw new Error('Not authenticated');
                }
                
                const data = await response.json();
                document.getElementById('cpu-usage').textContent = data.cpu + '%';
                document.getElementById('memory-usage').textContent = data.memory + '%';
                document.getElementById('active-servers').textContent = data.active_servers;
                
                // Update server statuses
                updateServerStatus('fivem', data.servers.fivem);
                updateServerStatus('minecraft', data.servers.minecraft);
                updateServerStatus('discord', data.servers.discord);
            } catch (error) {
                console.error('Error fetching stats:', error);
                if (error.message === 'Not authenticated') {
                    logout();
                }
            }
        }
        
        function updateServerStatus(server, data) {
            const statusElement = document.getElementById(server + '-status');
            const startBtn = document.querySelector(`[onclick="controlServer('${server}', 'start')"]`);
            const stopBtn = document.querySelector(`[onclick="controlServer('${server}', 'stop')"]`);
            
            if (data.status === 'running') {
                statusElement.textContent = 'RUNNING';
                statusElement.className = 'status status-running';
                startBtn.style.display = 'none';
                stopBtn.style.display = 'block';
            } else {
                statusElement.textContent = 'STOPPED';
                statusElement.className = 'status status-stopped';
                startBtn.style.display = 'block';
                stopBtn.style.display = 'none';
            }
            
            if (server === 'fivem' && data.players !== undefined) {
                document.getElementById('fivem-players').textContent = data.players + '/32';
            }
            
            if (data.uptime) {
                document.getElementById(server + '-uptime').textContent = data.uptime;
            }
        }
        
        async function controlServer(server, action) {
            try {
                const response = await fetch('/api/control', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': 'Bearer ' + sessionToken
                    },
                    body: JSON.stringify({
                        server: server,
                        action: action
                    })
                });
                
                if (!response.ok) {
                    throw new Error('Not authenticated');
                }
                
                const data = await response.json();
                addLog(`Server ${server}: ${action} command sent`);
                updateStats();
            } catch (error) {
                addLog(`Error: ${error}`);
                if (error.message === 'Not authenticated') {
                    logout();
                }
            }
        }
        
        async function showConsole(server) {
            try {
                const response = await fetch(`/api/console/${server}`, {
                    headers: {
                        'Authorization': 'Bearer ' + sessionToken
                    }
                });
                
                if (!response.ok) {
                    throw new Error('Not authenticated');
                }
                
                const data = await response.json();
                const consoleOutput = document.getElementById('console-output');
                consoleOutput.innerHTML = '';
                data.logs.forEach(log => {
                    addLog(log, false);
                });
            } catch (error) {
                if (error.message === 'Not authenticated') {
                    logout();
                }
            }
        }
        
        async function sendCommand() {
            const input = document.getElementById('console-input');
            const command = input.value.trim();
            if (command) {
                addLog(`> ${command}`);
                input.value = '';
                
                try {
                    await fetch('/api/command', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'Authorization': 'Bearer ' + sessionToken
                        },
                        body: JSON.stringify({
                            command: command
                        })
                    });
                } catch (error) {
                    console.error('Error sending command:', error);
                }
            }
        }
        
        function addLog(message, scroll = true) {
            const consoleOutput = document.getElementById('console-output');
            const timestamp = new Date().toLocaleTimeString();
            const logEntry = document.createElement('div');
            logEntry.className = 'log-entry';
            logEntry.innerHTML = `<span class="timestamp">[${timestamp}]</span> ${message}`;
            consoleOutput.appendChild(logEntry);
            
            if (scroll) {
                consoleOutput.scrollTop = consoleOutput.scrollHeight;
            }
        }
        
        // Initialize
        loadUserInfo();
        setInterval(updateStats, 2000);
        updateStats();
        
        // Handle Enter key in console input
        document.getElementById('console-input').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                sendCommand();
            }
        });
    </script>
</body>
</html>
EOF

    create_api_scripts
}

create_api_scripts() {
    # G≈Ç√≥wny skrypt API w Pythonie z autentykacjƒÖ
    cat > "$WEB_DIR/api.py" << 'EOF'
#!/usr/bin/env python3
from http.server import HTTPServer, BaseHTTPRequestHandler
import json
import os
import subprocess
import time
import threading
from datetime import datetime
import hashlib
import secrets
import sqlite3
import urllib.parse

PANEL_DIR = os.path.expanduser("~/game-panel")
LOG_DIR = os.path.join(PANEL_DIR, "logs")
SERVER_DIR = os.path.join(PANEL_DIR, "servers")
DB_FILE = os.path.join(PANEL_DIR, "database", "panel.db")

class GamePanelHandler(BaseHTTPRequestHandler):
    def do_GET(self):
        if self.path == '/':
            self.serve_file('login.html')
        elif self.path == '/login.html':
            self.serve_file('login.html')
        elif self.path == '/dashboard.html':
            if not self.authenticate():
                return
            self.serve_file('dashboard.html')
        elif self.path == '/api/stats':
            if not self.authenticate():
                return
            self.serve_stats()
        elif self.path.startswith('/api/console/'):
            if not self.authenticate():
                return
            server = self.path.split('/')[-1]
            self.serve_console(server)
        elif self.path == '/api/auth/me':
            if not self.authenticate():
                return
            self.serve_user_info()
        else:
            self.serve_file(self.path[1:])
    
    def do_POST(self):
        if self.path == '/api/auth/login':
            self.handle_login()
        elif self.path == '/api/auth/register':
            self.handle_register()
        elif self.path == '/api/control':
            if not self.authenticate():
                return
            self.handle_control()
        elif self.path == '/api/command':
            if not self.authenticate():
                return
            self.handle_command()
        else:
            self.send_error(404)
    
    def authenticate(self):
        auth_header = self.headers.get('Authorization')
        if not auth_header or not auth_header.startswith('Bearer '):
            self.send_auth_error()
            return False
        
        token = auth_header.split(' ')[1]
        user_id = self.validate_session(token)
        
        if not user_id:
            self.send_auth_error()
            return False
        
        self.user_id = user_id
        return True
    
    def validate_session(self, token):
        conn = sqlite3.connect(DB_FILE)
        cursor = conn.cursor()
        
        cursor.execute('''
            SELECT user_id FROM sessions 
            WHERE token = ? AND expires_at > datetime('now')
        ''', (token,))
        
        result = cursor.fetchone()
        conn.close()
        
        return result[0] if result else None
    
    def send_auth_error(self):
        self.send_response(401)
        self.send_header('Content-type', 'application/json')
        self.end_headers()
        self.wfile.write(json.dumps({"success": False, "message": "Authentication required"}).encode('utf-8'))
    
    def serve_file(self, filename):
        try:
            if filename == '':
                filename = 'login.html'
                
            filepath = os.path.join(PANEL_DIR, 'web', filename)
            if os.path.exists(filepath):
                with open(filepath, 'rb') as f:
                    content = f.read()
                
                content_type = 'text/html'
                if filename.endswith('.css'):
                    content_type = 'text/css'
                elif filename.endswith('.js'):
                    content_type = 'application/javascript'
                elif filename.endswith('.png'):
                    content_type = 'image/png'
                elif filename.endswith('.jpg'):
                    content_type = 'image/jpeg'
                
                self.send_response(200)
                self.send_header('Content-type', content_type)
                self.end_headers()
                self.wfile.write(content)
            else:
                self.send_error(404)
        except Exception as e:
            self.send_error(500, str(e))
    
    def serve_stats(self):
        stats = {
            "cpu": self.get_cpu_usage(),
            "memory": self.get_memory_usage(),
            "active_servers": self.get_active_servers_count(),
            "total_servers": 3,
            "servers": {
                "fivem": self.get_server_status("fivem"),
                "minecraft": self.get_server_status("minecraft"),
                "discord": self.get_server_status("discord")
            }
        }
        
        self.send_json_response(stats)
    
    def serve_console(self, server):
        log_file = os.path.join(LOG_DIR, f"{server}.log")
        logs = []
        if os.path.exists(log_file):
            with open(log_file, 'r') as f:
                logs = f.readlines()[-50:]  # Last 50 lines
        self.send_json_response({"logs": logs})
    
    def serve_user_info(self):
        conn = sqlite3.connect(DB_FILE)
        cursor = conn.cursor()
        
        cursor.execute('SELECT username FROM users WHERE id = ?', (self.user_id,))
        user = cursor.fetchone()
        conn.close()
        
        if user:
            self.send_json_response({"username": user[0]})
        else:
            self.send_auth_error()
    
    def handle_login(self):
        content_length = int(self.headers['Content-Length'])
        post_data = self.rfile.read(content_length)
        data = json.loads(post_data.decode('utf-8'))
        
        username = data.get('username')
        password = data.get('password')
        
        conn = sqlite3.connect(DB_FILE)
        cursor = conn.cursor()
        
        cursor.execute('SELECT id, password_hash FROM users WHERE username = ?', (username,))
        user = cursor.fetchone()
        
        if user and self.verify_password(password, user[1]):
            # Create session
            token = secrets.token_hex(32)
            expires_at = datetime.now().timestamp() + (24 * 60 * 60)  # 24 hours
            
            cursor.execute('''
                INSERT INTO sessions (user_id, token, expires_at)
                VALUES (?, ?, datetime(?, 'unixepoch'))
            ''', (user[0], token, expires_at))
            
            conn.commit()
            conn.close()
            
            self.send_json_response({
                "success": True,
                "message": "Login successful",
                "session_token": token
            })
        else:
            conn.close()
            self.send_json_response({
                "success": False,
                "message": "Invalid username or password"
            })
    
    def handle_register(self):
        content_length = int(self.headers['Content-Length'])
        post_data = self.rfile.read(content_length)
        data = json.loads(post_data.decode('utf-8'))
        
        username = data.get('username')
        email = data.get('email')
        password = data.get('password')
        
        conn = sqlite3.connect(DB_FILE)
        cursor = conn.cursor()
        
        # Check if user exists
        cursor.execute('SELECT id FROM users WHERE username = ? OR email = ?', (username, email))
        if cursor.fetchone():
            conn.close()
            self.send_json_response({
                "success": False,
                "message": "Username or email already exists"
            })
            return
        
        # Create user
        password_hash = self.hash_password(password)
        cursor.execute('''
            INSERT INTO users (username, email, password_hash, created_at)
            VALUES (?, ?, ?, datetime('now'))
        ''', (username, email, password_hash))
        
        conn.commit()
        conn.close()
        
        self.send_json_response({
            "success": True,
            "message": "Registration successful"
        })
    
    def handle_control(self):
        content_length = int(self.headers['Content-Length'])
        post_data = self.rfile.read(content_length)
        data = json.loads(post_data.decode('utf-8'))
        
        server = data.get('server')
        action = data.get('action')
        
        # Execute control action
        result = self.control_server(server, action)
        self.send_json_response({"status": "success", "result": result})
    
    def handle_command(self):
        content_length = int(self.headers['Content-Length'])
        post_data = self.rfile.read(content_length)
        data = json.loads(post_data.decode('utf-8'))
        
        command = data.get('command')
        # Log the command
        with open(os.path.join(LOG_DIR, "commands.log"), "a") as f:
            f.write(f"[{datetime.now()}] Command: {command}\n")
        
        self.send_json_response({"status": "received"})
    
    def send_json_response(self, data):
        self.send_response(200)
        self.send_header('Content-type', 'application/json')
        self.send_header('Access-Control-Allow-Origin', '*')
        self.end_headers()
        self.wfile.write(json.dumps(data).encode('utf-8'))
    
    def log_message(self, format, *args):
        # Disable default logging
        pass
    
    def hash_password(self, password):
        return hashlib.sha256(password.encode()).hexdigest()
    
    def verify_password(self, password, password_hash):
        return self.hash_password(password) == password_hash
    
    # System monitoring functions
    def get_cpu_usage(self):
        try:
            result = subprocess.run(['mpstat', '1', '1'], capture_output=True, text=True)
            lines = result.stdout.split('\n')
            for line in lines:
                if 'all' in line:
                    parts = line.split()
                    idle = float(parts[-1])
                    return round(100 - idle, 1)
        except:
            pass
        return round(20.5, 1)  # Fallback
    
    def get_memory_usage(self):
        try:
            result = subprocess.run(['free'], capture_output=True, text=True)
            lines = result.stdout.split('\n')
            if len(lines) >= 2:
                parts = lines[1].split()
                total = int(parts[1])
                used = int(parts[2])
                return round((used / total) * 100, 1)
        except:
            pass
        return round(45.2, 1)  # Fallback
    
    def get_active_servers_count(self):
        count = 0
        servers = ["fivem", "minecraft", "discord"]
        for server in servers:
            if self.is_server_running(server):
                count += 1
        return count
    
    def get_server_status(self, server):
        status = {
            "status": "running" if self.is_server_running(server) else "stopped",
            "uptime": "2h 30m",
            "players": 0
        }
        
        if server == "fivem":
            status["players"] = 3
        elif server == "minecraft":
            status["players"] = 2
        
        return status
    
    def is_server_running(self, server):
        try:
            result = subprocess.run(['screen', '-list'], capture_output=True, text=True)
            return server in result.stdout
        except:
            return False
    
    def control_server(self, server, action):
        script_path = os.path.join(PANEL_DIR, "scripts", f"{server}_{action}.sh")
        if os.path.exists(script_path):
            subprocess.Popen(['bash', script_path])
            return f"{action} command sent to {server}"
        return f"No script found for {server} {action}"

def init_database():
    os.makedirs(os.path.dirname(DB_FILE), exist_ok=True)
    
    conn = sqlite3.connect(DB_FILE)
    cursor = conn.cursor()
    
    # Create users table
    cursor.execute('''
        CREATE TABLE IF NOT EXISTS users (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            username TEXT UNIQUE NOT NULL,
            email TEXT UNIQUE NOT NULL,
            password_hash TEXT NOT NULL,
            created_at DATETIME NOT NULL
        )
    ''')
    
    # Create sessions table
    cursor.execute('''
        CREATE TABLE IF NOT EXISTS sessions (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            user_id INTEGER NOT NULL,
            token TEXT UNIQUE NOT NULL,
            expires_at DATETIME NOT NULL,
            created_at DATETIME DEFAULT CURRENT_TIMESTAMP,
            FOREIGN KEY (user_id) REFERENCES users (id)
        )
    ''')
    
    # Create default admin user if not exists
    cursor.execute('SELECT id FROM users WHERE username = ?', ('admin',))
    if not cursor.fetchone():
        import hashlib
        password_hash = hashlib.sha256('admin123'.encode()).hexdigest()
        cursor.execute('''
            INSERT INTO users (username, email, password_hash, created_at)
            VALUES (?, ?, ?, datetime('now'))
        ''', ('admin', 'admin@localhost', password_hash))
    
    conn.commit()
    conn.close()

def start_web_server():
    init_database()
    
    port = 8080
    server = HTTPServer(('0.0.0.0', port), GamePanelHandler)
    print(f"üåê Game Panel dostƒôpny pod: http://0.0.0.0:{port}")
    print(f"üîê Login: admin / admin123")
    print(f"üì± Dostƒôp z zewnƒÖtrz: http://your-codespace-url:{port}")
    server.serve_forever()

if __name__ == '__main__':
    start_web_server()
EOF

    # Skrypty kontroli serwer√≥w
    mkdir -p "$PANEL_DIR/scripts"
    
    # FiveM scripts - prawdziwy serwer
    cat > "$PANEL_DIR/scripts/fivem_start.sh" << 'EOF'
#!/bin/bash
echo "Starting FiveM server..."
cd ~/game-panel/servers/fivem

# Sprawd≈∫ czy serwer jest ju≈º pobrany
if [ ! -f "run.sh" ]; then
    echo "‚ùå FiveM server not installed. Run './game-panel.sh install-fivem' first."
    exit 1
fi

# Uruchom serwer w screen
screen -dmS fivem bash -c "./run.sh 2>&1 | tee ~/game-panel/logs/fivem.log"
echo "‚úÖ FiveM server started in screen session 'fivem'"
echo "üìã Use 'screen -r fivem' to view console"
EOF

    cat > "$PANEL_DIR/scripts/fivem_stop.sh" << 'EOF'
#!/bin/bash
echo "Stopping FiveM server..."
screen -S fivem -X stuff "^C"
sleep 5
screen -S fivem -X quit
echo "‚úÖ FiveM server stopped"
EOF

    # Minecraft scripts
    cat > "$PANEL_DIR/scripts/minecraft_start.sh" << 'EOF'
#!/bin/bash
echo "Starting Minecraft server..."
cd ~/game-panel/servers/minecraft

if [ ! -f "server.jar" ]; then
    echo "‚ö†Ô∏è Downloading Minecraft server..."
    wget -q -O server.jar \
        "https://piston-data.mojang.com/v1/objects/8dd1a28015f51b1803213892b50b7b4fc76e594d/server.jar"
    echo "eula=true" > eula.txt
fi

screen -dmS minecraft bash -c "java -Xmx1G -Xms512M -jar server.jar nogui 2>&1 | tee ~/game-panel/logs/minecraft.log"
echo "‚úÖ Minecraft server started"
EOF

    cat > "$PANEL_DIR/scripts/minecraft_stop.sh" << 'EOF'
#!/bin/bash
echo "Stopping Minecraft server..."
screen -S minecraft -X stuff "stop\n"
sleep 10
screen -S minecraft -X quit
echo "‚úÖ Minecraft server stopped"
EOF

    # Discord bot scripts
    cat > "$PANEL_DIR/scripts/discord_start.sh" << 'EOF'
#!/bin/bash
echo "Starting Discord bot..."
cd ~/game-panel/servers/discord-bot
screen -dmS discord-bot bash -c "node bot.js 2>&1 | tee ~/game-panel/logs/discord.log"
echo "‚úÖ Discord bot started"
EOF

    cat > "$PANEL_DIR/scripts/discord_stop.sh" << 'EOF'
#!/bin/bash
echo "Stopping Discord bot..."
screen -S discord-bot -X quit
pkill -f "node.*bot.js"
echo "‚úÖ Discord bot stopped"
EOF

    chmod +x $PANEL_DIR/scripts/*.sh
}

install_fivem_server() {
    echo -e "${PURPLE}üöó Installing FiveM Server...${NC}"
    
    cd "$SERVER_DIR/fivem"
    
    # Pobierz artefakty FiveM
    echo "üì¶ Downloading FiveM artifacts..."
    wget -q "https://runtime.fivem.net/artifacts/fivem/build_proot_linux/master/22279-aa01d2b869bff4c28012065603eaf15541aa8fc4/fx.tar.xz"
    
    if [ $? -ne 0 ]; then
        echo "‚ùå Failed to download FiveM server"
        return 1
    fi
    
    # Wypakuj
    echo "üìÇ Extracting FiveM server..."
    tar -xf fx.tar.xz
    rm fx.tar.xz
    
    # Utw√≥rz skrypt uruchamiania
    cat > "run.sh" << 'EOF'
#!/bin/bash
echo "üöó Starting FiveM Server..."
./run.sh
EOF

    chmod +x run.sh
    
    # Keymaster configuration
    cat > "keymaster.json" << 'EOF'
{
    "keymaster": "cfxk_1KQZ7kCqTxpTa0lahpVjF_Y8aNc"
}
EOF

    echo "‚úÖ FiveM server installed successfully!"
    echo "üîë Keymaster configured"
    echo "üéÆ Start the server from the web panel"
}

create_config_files() {
    echo -e "${YELLOW}üìÑ Tworzenie plik√≥w konfiguracyjnych...${NC}"
    
    # Discord bot
    cat > "$SERVER_DIR/discord-bot/bot.js" << 'EOF'
const { Client, GatewayIntentBits } = require('discord.js');

console.log('ü§ñ Discord Bot starting...');

const client = new Client({
    intents: [GatewayIntentBits.Guilds, GatewayIntentBits.GuildMessages]
});

client.once('ready', () => {
    console.log(`‚úÖ Bot ready: ${client.user.tag}`);
    console.log('üïπÔ∏è  Game Panel Bot is online!');
});

// Demo mode - don't actually login without token
console.log('üî∂ Running in demo mode');
console.log('üí° Set DISCORD_BOT_TOKEN to connect to Discord');

// Keep the process alive
setInterval(() => {
    console.log('ü§ñ Bot heartbeat...');
}, 60000);
EOF

    cat > "$SERVER_DIR/discord-bot/package.json" << 'EOF'
{
    "name": "discord-bot",
    "version": "1.0.0",
    "dependencies": {
        "discord.js": "^14.14.1"
    }
}
EOF
}

start_web_panel() {
    echo -e "${GREEN}üåê Uruchamianie panelu web na porcie $WEB_PORT...${NC}"
    
    # Sprawd≈∫ czy Python jest dostƒôpny
    if ! command -v python3 &> /dev/null; then
        echo -e "${YELLOW}üì¶ Instalowanie Pythona...${NC}"
        sudo apt-get update > /dev/null 2>&1
        sudo apt-get install -y python3 python3-pip > /dev/null 2>&1
    fi
    
    # Sprawd≈∫ czy screen jest dostƒôpny
    if ! command -v screen &> /dev/null; then
        echo -e "${YELLOW}üì¶ Instalowanie screen...${NC}"
        sudo apt-get install -y screen > /dev/null 2>&1
    fi
    
    # Uruchom serwer web
    cd "$WEB_DIR"
    python3 api.py &
    WEB_PID=$!
    echo $WEB_PID > "$PANEL_DIR/web.pid"
    
    echo -e "${GREEN}‚úÖ Panel web uruchomiony!${NC}"
    echo -e "${CYAN}üì± Adres: http://localhost:$WEB_PORT${NC}"
    echo -e "${CYAN}üîê Login: admin / admin123${NC}"
    echo -e "${CYAN}üåê Public URL: Check Codespaces Ports tab${NC}"
}

stop_web_panel() {
    if [ -f "$PANEL_DIR/web.pid" ]; then
        kill $(cat "$PANEL_DIR/web.pid") 2>/dev/null
        rm "$PANEL_DIR/web.pid"
        echo -e "${GREEN}‚úÖ Panel web zatrzymany${NC}"
    fi
}

show_status() {
    echo -e "${CYAN}=== üéÆ STATUS PANELU ===${NC}"
    
    # Check web panel
    if [ -f "$PANEL_DIR/web.pid" ] && kill -0 $(cat "$PANEL_DIR/web.pid") 2>/dev/null; then
        echo -e "üåê Web Panel: ${GREEN}RUNNING${NC} (port $WEB_PORT)"
    else
        echo -e "üåê Web Panel: ${RED}STOPPED${NC}"
    fi
    
    # Check servers
    servers=("fivem" "minecraft" "discord-bot")
    for server in "${servers[@]}"; do
        if screen -list | grep -q "$server"; then
            echo -e "üéÆ $server: ${GREEN}RUNNING${NC}"
        else
            echo -e "üéÆ $server: ${RED}STOPPED${NC}"
        fi
    done
    
    # Check FiveM installation
    if [ -f "$SERVER_DIR/fivem/run.sh" ]; then
        echo -e "üì¶ FiveM: ${GREEN}INSTALLED${NC}"
    else
        echo -e "üì¶ FiveM: ${YELLOW}NOT INSTALLED${NC}"
    fi
}

main_menu() {
    while true; do
        clear
        echo -e "${PURPLE}"
        echo -e "‚ïî‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïó"
        echo -e "‚ïë           üïπÔ∏è GAME PANEL            ‚ïë"
        echo -e "‚ïë           Pterodactyl-like          ‚ïë"
        echo -e "‚ïë        Authenticated System         ‚ïë"
        echo -e "‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù"
        echo -e "${NC}"
        
        show_status
        echo ""
        
        echo -e "${BLUE}1. üöÄ Start Web Panel${NC}"
        echo -e "${BLUE}2. üõë Stop Web Panel${NC}"
        echo -e "${BLUE}3. üåê Open in Browser${NC}"
        echo -e "${BLUE}4. üöó Install FiveM Server${NC}"
        echo -e "${BLUE}5. üõ†Ô∏è  Reinstall Panel${NC}"
        echo -e "${BLUE}6. üìä Show Logs${NC}"
        echo -e "${BLUE}0. ‚ùå Exit${NC}"
        echo ""
        read -p "Wybierz opcjƒô [0-6]: " choice
        
        case $choice in
            1)
                if [ ! -d "$WEB_DIR" ]; then
                    create_structure
                fi
                start_web_panel
                ;;
            2)
                stop_web_panel
                ;;
            3)
                echo -e "${CYAN}üåê Otwieranie przeglƒÖdarki...${NC}"
                echo -e "${YELLOW}üìã Adres: http://localhost:$WEB_PORT${NC}"
                echo -e "${GREEN}üîê Login: admin / admin123${NC}"
                ;;
            4)
                install_fivem_server
                ;;
            5)
                echo -e "${YELLOW}üõ†Ô∏è  Przeinstalowywanie panelu...${NC}"
                rm -rf $PANEL_DIR
                create_structure
                ;;
            6)
                tail -f $LOG_DIR/*.log
                ;;
            0)
                stop_web_panel
                echo -e "${GREEN}üëã Do widzenia!${NC}"
                exit 0
                ;;
            *)
                echo -e "${RED}‚ùå Nieprawid≈Çowy wyb√≥r${NC}"
                ;;
        esac
        read -p "Naci≈õnij Enter aby kontynuowaƒá..."
    done
}

# Main execution
case "$1" in
    "install")
        create_structure
        start_web_panel
        ;;
    "start")
        start_web_panel
        ;;
    "stop")
        stop_web_panel
        ;;
    "install-fivem")
        install_fivem_server
        ;;
    *)
        main_menu
        ;;
esac
