#!/bin/bash

# ASCII Art
ascii_art="

       _ _     _                 
      | (_)   | |                
      | |_ ___| |__  _ __  _   _ 
  _   | | / __| '_ \| '_ \| | | |
 | |__| | \__ \ | | | | | | |_| |
  \____/|_|___/_| |_|_| |_|\__,_|
                                 
"

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
YELLOW='\033[0;33m'
NC='\033[0m' # No Color

# Function for consistent messaging
echo_message() {
    echo -e "${GREEN}$1${NC}"
}

echo_error() {
    echo -e "${RED}$1${NC}"
}

# Clear the screen
clear

# Check if the script is run as root
if [ "$EUID" -ne 0 ]; then
  echo_error "Please run this script as root."
  exit 1
fi

echo -e "${CYAN}$ascii_art${NC}"

echo_message "* Installing Dependencies"

# Update package list and install dependencies
apt update
apt install -y curl software-properties-common git

# Add NodeSource repository and install Node.js
curl -fsSL https://deb.nodesource.com/setup_20.x | bash -
apt-get install -y nodejs

echo_message "* Installed Dependencies"

echo_message "* Installing Application"

# Create directory, clone repository, and install files
if [ -d "oversee-fixed" ]; then
    echo_message "* Directory already exists, pulling latest changes"
    cd oversee-fixed
    git pull
else
    git clone https://github.com/draco-labes/oversee-fixed.git
    cd oversee-fixed
fi

npm install
npm run seed
npm run createUser

echo_message "* Installation Complete"
echo_message "* Starting Skyport on port 3001"

# Start the application
node .
