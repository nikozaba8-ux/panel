        echo $server_pid > "$PANEL_DIR/web_server.pid"
        log "Serwer web uruchomiony (PID: $server_pid)"
        
    else
        error "âŒ Nie udaÅ‚o siÄ™ uruchomiÄ‡ serwera web!"
        # Fallback do prostego HTTP server
        echo -e "${YELLOW}ğŸ”„ Uruchamianie prostego serwera HTTP...${NC}"
