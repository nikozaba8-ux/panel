#!/bin/bash

# ==============================================
# GAME PANEL - PTERODACTYL LIKE
# Web Interface on port 8080
# FiveM + Minecraft + Discord Bot
# ==============================================

# Konfiguracja
PANEL_DIR="$HOME/game-panel"
WEB_DIR="$PANEL_DIR/web"
SERVER_DIR="$PANEL_DIR/servers"
LOG_DIR="$PANEL_DIR/logs"
DB_DIR="$PANEL_DIR/database"
CONFIG_DIR="$PANEL_DIR/config"
SCRIPTS_DIR="$PANEL_DIR/scripts"

# Port panelu web
WEB_PORT=8080

# FiveM Artifact
FIVEM_ARTIFACT="https://runtime.fivem.net/artifacts/fivem/build_proot_linux/master/6786-91c9a5e2d49f67d5f8a7e8987a5a5f6b9b6b9c2f/fx.tar.xz"
FIVEM_KEYMASTER="cfxk_1KQZ7kCqTxpTa0lahpVjF_Y8aNc"

# Kolory
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
PURPLE='\033[0;35m'
NC='\033[0m'

# Funkcja tworzƒÖca strukturƒô
create_structure() {
    echo -e "${PURPLE}üõ†Ô∏è  Tworzenie struktury panelu...${NC}"
    
    mkdir -p $WEB_DIR $SERVER_DIR $LOG_DIR $DB_DIR $CONFIG_DIR $SCRIPTS_DIR
    mkdir -p $SERVER_DIR/fivem $SERVER_DIR/minecraft $SERVER_DIR/discord-bot
    mkdir -p $SERVER_DIR/fivem/data $SERVER_DIR/fivem/cache $SERVER_DIR/fivem/logs
    
    create_database
    create_web_interface
    create_config_files
    create_servers
    create_control_scripts
}

create_database() {
    echo -e "${YELLOW}üóÉÔ∏è  Tworzenie bazy danych u≈ºytkownik√≥w...${NC}"
    
    # Plik SQLite dla u≈ºytkownik√≥w
    cat > "$DB_DIR/init_db.py" << 'EOF'
import sqlite3
import hashlib
import os

DB_PATH = os.path.join(os.path.dirname(__file__), 'users.db')

def init_database():
    conn = sqlite3.connect(DB_PATH)
    cursor = conn.cursor()
    
    cursor.execute('''
        CREATE TABLE IF NOT EXISTS users (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            username TEXT UNIQUE NOT NULL,
            password_hash TEXT NOT NULL,
            email TEXT UNIQUE,
            created_at DATETIME DEFAULT CURRENT_TIMESTAMP,
            is_admin BOOLEAN DEFAULT FALSE,
            permissions TEXT DEFAULT 'user'
        )
    ''')
    
    # Dodaj domy≈õlnego admina
    admin_hash = hashlib.sha256('admin123'.encode()).hexdigest()
    try:
        cursor.execute(
            'INSERT INTO users (username, password_hash, email, is_admin) VALUES (?, ?, ?, ?)',
            ('admin', admin_hash, 'admin@gamepanel.com', True)
        )
    except sqlite3.IntegrityError:
        pass
    
    conn.commit()
    conn.close()
    print("Database initialized")

if __name__ == '__main__':
    init_database()
EOF

    python3 "$DB_DIR/init_db.py"
}

