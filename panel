    <script>
        function switchTab(tabName) {
            document.querySelectorAll('.tab').forEach(tab => tab.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));
            
            event.target.classList.add('active');
            document.getElementById(tabName + '-tab').classList.add('active');
            hideMessage();
        }

        function showMessage(text, type) {
            const messageEl = document.getElementById('message');
            messageEl.textContent = text;
            messageEl.className = 'message ' + type;
            messageEl.style.display = 'block';
        }

        function hideMessage() {
            document.getElementById('message').style.display = 'none';
        }

        document.getElementById('login-form').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const username = document.getElementById('login-username').value;
            const password = document.getElementById('login-password').value;
            
            try {
                const response = await fetch('/api/auth/login', {
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify({ username, password })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    localStorage.setItem('session_token', data.session_token);
                    window.location.href = '/';
                } else {
                    showMessage(data.message, 'error');
                }
            } catch (error) {
                showMessage('Network error', 'error');
            }
        });

        document.getElementById('register-form').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const username = document.getElementById('register-username').value;
            const email = document.getElementById('register-email').value;
            const password = document.getElementById('register-password').value;
            const confirmPassword = document.getElementById('register-confirm-password').value;
            
            if (password !== confirmPassword) {
                showMessage('Passwords do not match', 'error');
                return;
            }
            
            try {
                const response = await fetch('/api/auth/register', {
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify({ username, email, password })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    showMessage('Registration successful! Please login.', 'success');
                    switchTab('login');
                    document.getElementById('register-form').reset();
                } else {
                    showMessage(data.message, 'error');
                }
            } catch (error) {
                showMessage('Network error', 'error');
            }
        });

        if (localStorage.getItem('session_token')) {
            window.location.href = '/';
        }
    </script>
</body>
</html>
EOF

    create_api_scripts
}

create_api_scripts() {
    # Rozszerzony skrypt API
    cat > "$WEB_DIR/api.py" << 'EOF'
#!/usr/bin/env python3
from http.server import HTTPServer, BaseHTTPRequestHandler
import json
import os
import subprocess
import time
import sqlite3
import hashlib
import secrets
from datetime import datetime, timedelta
import threading

PANEL_DIR = os.path.expanduser("~/game-panel")
LOG_DIR = os.path.join(PANEL_DIR, "logs")
SERVER_DIR = os.path.join(PANEL_DIR, "servers")
DB_FILE = os.path.join(PANEL_DIR, "database", "panel.db")

class GamePanelHandler(BaseHTTPRequestHandler):
    def do_GET(self):
        if self.path == '/':
            self.serve_file('index.html')
        elif self.path == '/login.html':
            self.serve_file('login.html')
        elif self.path.startswith('/api/'):
            if not self.authenticate():
                return
            
            if self.path == '/api/stats':
                self.serve_stats()
            elif self.path == '/api/servers':
                self.serve_user_servers()
            elif self.path == '/api/auth/me':
                self.serve_user_info()
            else:
                self.send_error(404)
        else:
            self.serve_file(self.path[1:])
    
    def do_POST(self):
        if self.path == '/api/auth/login':
            self.handle_login()
        elif self.path == '/api/auth/register':
            self.handle_register()
        elif self.path.startswith('/api/'):
            if not self.authenticate():
                return
            
            if self.path == '/api/servers/create':
                self.handle_create_server()
            elif self.path == '/api/servers/control':
                self.handle_control_server()
            else:
                self.send_error(404)
        else:
            self.send_error(404)
    
    def authenticate(self):
        if self.path in ['/api/auth/login', '/api/auth/register']:
            return True
            
        auth_header = self.headers.get('Authorization')
        if not auth_header or not auth_header.startswith('Bearer '):
            self.send_auth_error()
            return False
        
        token = auth_header.split(' ')[1]
        user_id = self.validate_session(token)
        
        if not user_id:
            self.send_auth_error()
            return False
        
        self.user_id = user_id
        return True
    
    def validate_session(self, token):
        conn = sqlite3.connect(DB_FILE)
        cursor = conn.cursor()
        cursor.execute('SELECT user_id FROM sessions WHERE token = ? AND expires_at > datetime("now")', (token,))
        result = cursor.fetchone()
        conn.close()
        return result[0] if result else None
    
    def serve_file(self, filename):
        try:
            filepath = os.path.join(PANEL_DIR, 'web', filename)
            if os.path.exists(filepath):
                with open(filepath, 'rb') as f:
                    content = f.read()
                
                content_type = 'text/html'
                if filename.endswith('.css'):
                    content_type = 'text/css'
                elif filename.endswith('.js'):
                    content_type = 'application/javascript'
                elif filename.endswith('.png'):
                    content_type = 'image/png'
                elif filename.endswith('.jpg'):
                    content_type = 'image/jpeg'
                
                self.send_response(200)
                self.send_header('Content-type', content_type)
                self.end_headers()
                self.wfile.write(content)
            else:
                self.send_error(404)
        except Exception as e:
            self.send_error(500, str(e))
    
    def serve_stats(self):
        stats = {
            "cpu": self.get_cpu_usage(),
            "memory": self.get_memory_usage(),
            "active_servers": self.get_active_servers_count(),
            "total_servers": self.get_total_servers_count()
        }
        self.send_json_response(stats)
    
    def serve_user_servers(self):
        servers = self.get_user_servers()
        self.send_json_response(servers)
    
    def serve_user_info(self):
        conn = sqlite3.connect(DB_FILE)
        cursor = conn.cursor()
        cursor.execute('SELECT username, email FROM users WHERE id = ?', (self.user_id,))
        user = cursor.fetchone()
        conn.close()
        
        if user:
            self.send_json_response({"username": user[0], "email": user[1]})
        else:
            self.send_auth_error()
    
    def handle_login(self):
        data = self.get_post_data()
        username = data.get('username')
        password = data.get('password')
        
        conn = sqlite3.connect(DB_FILE)
        cursor = conn.cursor()
        cursor.execute('SELECT id, password_hash FROM users WHERE username = ?', (username,))
        user = cursor.fetchone()
        
        if user and self.verify_password(password, user[1]):
            token = secrets.token_hex(32)
            expires_at = datetime.now() + timedelta(hours=24)
            
            cursor.execute('INSERT INTO sessions (user_id, token, expires_at) VALUES (?, ?, ?)',
                         (user[0], token, expires_at))
            conn.commit()
            conn.close()
            
            self.send_json_response({"success": True, "message": "Login successful", "session_token": token})
        else:
            conn.close()
            self.send_json_response({"success": False, "message": "Invalid credentials"})
    
    def handle_register(self):
        data = self.get_post_data()
        username = data.get('username')
        email = data.get('email')
        password = data.get('password')
        
        conn = sqlite3.connect(DB_FILE)
        cursor = conn.cursor()
        
        cursor.execute('SELECT id FROM users WHERE username = ? OR email = ?', (username, email))
        if cursor.fetchone():
            conn.close()
            self.send_json_response({"success": False, "message": "User already exists"})
            return
        
        password_hash = self.hash_password(password)
        cursor.execute('INSERT INTO users (username, email, password_hash, created_at) VALUES (?, ?, ?, ?)',
                     (username, email, password_hash, datetime.now()))
        conn.commit()
        conn.close()
        
        self.send_json_response({"success": True, "message": "Registration successful"})
    
    def handle_create_server(self):
        data = self.get_post_data()
        server_name = data.get('name')
        server_type = data.get('type')
        resources = data.get('resources', {})
        version = data.get('version')
        
        # Create server in database
        server_id = self.create_server_in_db(server_name, server_type, resources, version)
        
        # Create server files and start script
        self.create_server_files(server_id, server_name, server_type, resources, version)
        
        server_info = {
            "id": server_id,
            "name": server_name,
            "type": server_type,
            "status": "stopped",
            "resources": resources,
            "version": version
        }
        
        self.send_json_response(server_info)
    
    def handle_control_server(self):
        data = self.get_post_data()
        server_id = data.get('server_id')
        action = data.get('action')
        
        result = self.control_server(server_id, action)
        self.send_json_response({"success": True, "message": result})
    
    def create_server_in_db(self, name, type, resources, version):
        conn = sqlite3.connect(DB_FILE)
        cursor = conn.cursor()
        
        cursor.execute('''
            INSERT INTO servers (user_id, name, type, resources, version, status, created_at)
            VALUES (?, ?, ?, ?, ?, ?, ?)
        ''', (self.user_id, name, type, json.dumps(resources), version, 'stopped', datetime.now()))
        
        server_id = cursor.lastrowid
        conn.commit()
        conn.close()
        return server_id
    
    def create_server_files(self, server_id, name, type, resources, version):
        server_path = os.path.join(SERVER_DIR, type, f"server_{server_id}")
        os.makedirs(server_path, exist_ok=True)
        
        # Create start script based on server type
        start_script = self.generate_start_script(type, resources, version)
        
        with open(os.path.join(server_path, 'start.sh'), 'w') as f:
            f.write(start_script)
        
        os.chmod(os.path.join(server_path, 'start.sh'), 0o755)
        
        # Create server configuration
        config = {
            "id": server_id,
            "name": name,
            "type": type,
            "resources": resources,
            "version": version,
            "port": self.get_available_port()
        }
        
        with open(os.path.join(server_path, 'config.json'), 'w') as f:
            json.dump(config, f, indent=2)
    
    def generate_start_script(self, server_type, resources, version):
        cpu_limit = resources.get('cpu', 1)
        memory_limit = resources.get('memory', 512)
        
        scripts = {
            'fivem': f'''#!/bin/bash
echo "Starting FiveM Server with {cpu_limit} CPU cores and {memory_limit}MB RAM"
cd $(dirname "$0")
# FiveM server start command would go here
while true; do
    echo "[$(date)] FiveM Server running - Players: 0/{resources.get('memory', 32) // 64}"
    sleep 30
done
''',
            'minecraft': f'''#!/bin/bash
echo "Starting Minecraft Server with {cpu_limit} CPU cores and {memory_limit}MB RAM"
cd $(dirname "$0")
java -Xmx{memory_limit}M -Xms{max(512, memory_limit // 2)}M -jar server.jar nogui
''',
            'python': f'''#!/bin/bash
echo "Starting Python App with {cpu_limit} CPU cores and {memory_limit}MB RAM"
cd $(dirname "$0")
python{version} app.py
''',
            'node': f'''#!/bin/bash
echo "Starting Node.js App with {cpu_limit} CPU cores and {memory_limit}MB RAM"
cd $(dirname "$0")
npm start
'''
        }
        
        return scripts.get(server_type, 'echo "Unknown server type"')
    
    def control_server(self, server_id, action):
        # Get server info
        conn = sqlite3.connect(DB_FILE)
        cursor = conn.cursor()
        cursor.execute('SELECT type, name FROM servers WHERE id = ? AND user_id = ?', (server_id, self.user_id))
        server = cursor.fetchone()
        
        if not server:
            conn.close()
            return "Server not found"
        
        server_type, server_name = server
        
        # Update server status
        cursor.execute('UPDATE servers SET status = ? WHERE id = ?', (action if action != 'restart' else 'running', server_id))
        conn.commit()
        conn.close()
        
        # Execute control action
        server_path = os.path.join(SERVER_DIR, server_type, f"server_{server_id}")
        
        if action == 'start':
            subprocess.Popen(['screen', '-dmS', f'server_{server_id}', 'bash', os.path.join(server_path, 'start.sh')])
            return f"Server {server_name} started"
        elif action == 'stop':
            subprocess.run(['screen', '-S', f'server_{server_id}', '-X', 'quit'])
            return f"Server {server_name} stopped"
        elif action == 'restart':
            subprocess.run(['screen', '-S', f'server_{server_id}', '-X', 'quit'])
            time.sleep(2)
            subprocess.Popen(['screen', '-dmS', f'server_{server_id}', 'bash', os.path.join(server_path, 'start.sh')])
            return f"Server {server_name} restarted"
    
    def get_user_servers(self):
        conn = sqlite3.connect(DB_FILE)
        cursor = conn.cursor()
        cursor.execute('''
            SELECT id, name, type, resources, status, version 
            FROM servers WHERE user_id = ?
        ''', (self.user_id,))
        
        servers = []
        for row in cursor.fetchall():
            servers.append({
                "id": row[0],
                "name": row[1],
                "type": row[2],
                "resources": json.loads(row[3]),
                "status": row[4],
                "version": row[5]
            })
        
        conn.close()
        return servers
    
    def get_available_port(self):
        # Simple port assignment - in production this would be more sophisticated
        return 30000 + len(self.get_user_servers())
    
    def get_post_data(self):
        content_length = int(self.headers['Content-Length'])
        return json.loads(self.rfile.read(content_length).decode('utf-8'))
    
    def send_json_response(self, data):
        self.send_response(200)
        self.send_header('Content-type', 'application/json')
        self.send_header('Access-Control-Allow-Origin', '*')
        self.end_headers()
        self.wfile.write(json.dumps(data).encode('utf-8'))
    
    def send_auth_error(self):
        self.send_response(401)
        self.send_header('Content-type', 'application/json')
        self.end_headers()
        self.wfile.write(json.dumps({"success": False, "message": "Authentication required"}).encode('utf-8'))
    
    def log_message(self, format, *args):
        pass
    
    # System monitoring
    def get_cpu_usage(self):
        try:
            result = subprocess.run(['mpstat', '1', '1'], capture_output=True, text=True)
            for line in result.stdout.split('\\n'):
                if 'all' in line:
                    return round(100 - float(line.split()[-1]), 1)
        except:
            pass
        return round(15.5, 1)
    
    def get_memory_usage(self):
        try:
            result = subprocess.run(['free'], capture_output=True, text=True)
            lines = result.stdout.split('\\n')
            if len(lines) >= 2:
                parts = lines[1].split()
                total = int(parts[1])
                used = int(parts[2])
                return round((used / total) * 100, 1)
        except:
            pass
        return round(42.3, 1)
    
    def get_active_servers_count(self):
        conn = sqlite3.connect(DB_FILE)
        cursor = conn.cursor()
        cursor.execute("SELECT COUNT(*) FROM servers WHERE status = 'running' AND user_id = ?", (self.user_id,))
        count = cursor.fetchone()[0]
        conn.close()
        return count
    
    def get_total_servers_count(self):
        conn = sqlite3.connect(DB_FILE)
        cursor = conn.cursor()
        cursor.execute("SELECT COUNT(*) FROM servers WHERE user_id = ?", (self.user_id,))
        count = cursor.fetchone()[0]
        conn.close()
        return count
    
    def hash_password(self, password):
        return hashlib.sha256(password.encode()).hexdigest()
    
    def verify_password(self, password, password_hash):
        return self.hash_password(password) == password_hash

def init_database():
    os.makedirs(os.path.dirname(DB_FILE), exist_ok=True)
    
    conn = sqlite3.connect(DB_FILE)
    cursor = conn.cursor()
    
    cursor.execute('''
        CREATE TABLE IF NOT EXISTS users (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            username TEXT UNIQUE NOT NULL,
            email TEXT UNIQUE NOT NULL,
            password_hash TEXT NOT NULL,
            created_at DATETIME NOT NULL
        )
    ''')
    
    cursor.execute('''
        CREATE TABLE IF NOT EXISTS sessions (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            user_id INTEGER NOT NULL,
            token TEXT UNIQUE NOT NULL,
            expires_at DATETIME NOT NULL,
            created_at DATETIME DEFAULT CURRENT_TIMESTAMP,
            FOREIGN KEY (user_id) REFERENCES users (id)
        )
    ''')
    
    cursor.execute('''
        CREATE TABLE IF NOT EXISTS servers (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            user_id INTEGER NOT NULL,
            name TEXT NOT NULL,
            type TEXT NOT NULL,
            resources TEXT NOT NULL,
            version TEXT,
            status TEXT DEFAULT 'stopped',
            created_at DATETIME NOT NULL,
            FOREIGN KEY (user_id) REFERENCES users (id)
        )
    ''')
    
    # Create default admin user
    cursor.execute('SELECT id FROM users WHERE username = ?', ('admin',))
    if not cursor.fetchone():
        password_hash = hashlib.sha256('admin123'.encode()).hexdigest()
        cursor.execute(
            'INSERT INTO users (username, email, password_hash, created_at) VALUES (?, ?, ?, ?)',
            ('admin', 'admin@localhost', password_hash, datetime.now())
        )
    
    conn.commit()
    conn.close()

def start_nginx():
    print("ðŸŒ Starting Nginx...")
    nginx_config = os.path.expanduser("~/game-panel/nginx/nginx.conf")
    subprocess.Popen(['nginx', '-c', nginx_config, '-p', os.path.expanduser("~/game-panel/nginx")])

def start_panel():
    init_database()
    start_nginx()
    
    port = 8080
    server = HTTPServer(('0.0.0.0', port), GamePanelHandler)
    print(f"ðŸŽ® Panel API running on port {port}")
    print(f"ðŸŒ Web interface available on port 80")
    print(f"ðŸ” Default login: admin / admin123")
    server.serve_forever()

if __name__ == '__main__':
    start_panel()
EOF

    chmod +x "$WEB_DIR/api.py"
}

create_config_files() {
    echo -e "${YELLOW}ðŸ“„ Tworzenie plikÃ³w konfiguracyjnych...${NC}"
    
    # PrzykÅ‚adowe pliki dla rÃ³Å¼nych typÃ³w serwerÃ³w
    cat > "$SERVER_DIR/python/app.py" << 'EOF'
from flask import Flask
import os

app = Flask(__name__)

@app.route('/')
def hello():
    return f"Python App running on PID {os.getpid()}"

if __name__ == '__main__':
    app.run(host='0.0.0.0', port=5000)
EOF

    cat > "$SERVER_DIR/node/package.json" << 'EOF'
{
    "name": "node-app",
    "version": "1.0.0",
    "scripts": {
        "start": "node server.js"
    },
    "dependencies": {
        "express": "^4.18.0"
    }
}
EOF

    cat > "$SERVER_DIR/node/server.js" << 'EOF'
const express = require('express');
const app = express();
const port = 3000;

app.get('/', (req, res) => {
    res.send('Node.js app is running!');
});

app.listen(port, () => {
    console.log(`Server running on port ${port}`);
});
EOF
}

init_database() {
    echo -e "${YELLOW}ðŸ—ƒï¸ Inicjalizacja bazy danych...${NC}"
    python3 "$WEB_DIR/api.py" &
    sleep 2
    pkill -f "api.py"
}

install_nginx() {
    echo -e "${YELLOW}ðŸ“¦ Instalowanie Nginx...${NC}"
    sudo apt-get update
    sudo apt-get install -y nginx
    
    # Zatrzymaj domyÅ›lny serwer Nginx
    sudo systemctl stop nginx
    sudo systemctl disable nginx
}

start_services() {
    echo -e "${GREEN}ðŸš€ Uruchamianie usÅ‚ug...${NC}"
    
    # Uruchom Nginx z naszej konfiguracji
    nginx -c "$NGINX_DIR/nginx.conf" -p "$NGINX_DIR"
    
    # Uruchom panel API
    cd "$WEB_DIR"
    python3 api.py &
    echo $! > "$PANEL_DIR/api.pid"
    
    echo -e "${GREEN}âœ… UsÅ‚ugi uruchomione!${NC}"
    echo -e "${CYAN}ðŸŒ Panel: http://localhost:80${NC}"
    echo -e "${CYAN}ðŸ” Login: admin / admin123${NC}"
}

stop_services() {
    echo -e "${YELLOW}ðŸ›‘ Zatrzymywanie usÅ‚ug...${NC}"
    
    # Zatrzymaj Nginx
    nginx -s stop -c "$NGINX_DIR/nginx.conf" -p "$NGINX_DIR" 2>/dev/null
    
    # Zatrzymaj API
    if [ -f "$PANEL_DIR/api.pid" ]; then
        kill $(cat "$PANEL_DIR/api.pid") 2>/dev/null
        rm "$PANEL_DIR/api.pid"
    fi
    
    # Zatrzymaj wszystkie serwery w screen
    screen -list | grep -oP 'server_[0-9]+' | while read session; do
        screen -S "$session" -X quit
    done
    
    echo -e "${GREEN}âœ… UsÅ‚ugi zatrzymane${NC}"
}

show_status() {
    echo -e "${CYAN}=== ðŸŽ® STATUS PANELU ===${NC}"
    
    # SprawdÅº Nginx
    if pgrep -f "nginx.*game-panel" > /dev/null; then
        echo -e "ðŸŒ Nginx: ${GREEN}RUNNING${NC} (port 80)"
    else
        echo -e "ðŸŒ Nginx: ${RED}STOPPED${NC}"
    fi
    
    # SprawdÅº API
    if [ -f "$PANEL_DIR/api.pid" ] && kill -0 $(cat "$PANEL_DIR/api.pid") 2>/dev/null; then
        echo -e "ðŸ”Œ Panel API: ${GREEN}RUNNING${NC}"
    else
        echo -e "ðŸ”Œ Panel API: ${RED}STOPPED${NC}"
    fi
    
    # SprawdÅº serwery
    server_count=$(screen -list | grep -c 'server_')
    echo -e "ðŸŽ® Aktywne serwery: ${GREEN}$server_count${NC}"
}

main_menu() {
    while true; do
        clear
        echo -e "${PURPLE}"
        echo -e "â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—"
        echo -e "â•‘           ðŸ•¹ï¸ PTERODACTYL PANEL     â•‘"
        echo -e "â•‘           Nginx Edition             â•‘"
        echo -e "â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
        echo -e "${NC}"
        
        show_status
        echo ""
        
        echo -e "${BLUE}1. ðŸš€ Start Panel${NC}"
        echo -e "${BLUE}2. ðŸ›‘ Stop Panel${NC}"
        echo -e "${BLUE}3. ðŸŒ Open in Browser${NC}"
        echo -e "${BLUE}4. ðŸ› ï¸  Reinstall Panel${NC}"
        echo -e "${BLUE}5. ðŸ“Š System Info${NC}"
        echo -e "${BLUE}0. âŒ Exit${NC}"
        echo ""
        read -p "Wybierz opcjÄ™ [0-5]: " choice
        
        case $choice in
            1)
                if [ ! -d "$WEB_DIR" ]; then
                    install_nginx
                    create_structure
                fi
                start_services
                ;;
            2)
                stop_services
                ;;
            3)
                echo -e "${CYAN}ðŸŒ Otwieranie przeglÄ…darki...${NC}"
                echo -e "${YELLOW}ðŸ“‹ Adres: http://localhost${NC}"
                echo -e "${GREEN}ðŸ” Login: admin / admin123${NC}"
                ;;
            4)
                echo -e "${YELLOW}ðŸ› ï¸  Przeinstalowywanie panelu...${NC}"
                stop_services
                rm -rf $PANEL_DIR
                install_nginx
                create_structure
                start_services
                ;;
            5)
                echo -e "${CYAN}=== ðŸ“Š SYSTEM INFORMATION ===${NC}"
                free -h | awk 'NR==1{print "ðŸ’¾ " $0} NR==2{print "ðŸ”„ " $0}'
                echo ""
                df -h / | awk 'NR==2{print "ðŸ’¿ Disk: " $4 " free"}'
                echo ""
                echo "ðŸŒ Public URL: Check Codespaces Ports tab"
                ;;
            0)
                stop_services
                echo -e "${GREEN}ðŸ‘‹ Do widzenia!${NC}"
                exit 0
                ;;
            *)
                echo -e "${RED}âŒ NieprawidÅ‚owy wybÃ³r${NC}"
                ;;
        esac
        read -p "NaciÅ›nij Enter aby kontynuowaÄ‡..."
    done
}

# Main execution
case "$1" in
    "install")
        install_nginx
        create_structure
        start_services
        ;;
    "start")
        start_services
        ;;
    "stop")
        stop_services
        ;;
    *)
        main_menu
        ;;
esac
