    <script>
        let currentUser = null;
        let userServers = [];

        // Authentication check
        function checkAuth() {
            const token = localStorage.getItem('session_token');
            if (!token) {
                window.location.href = '/login.html';
                return;
            }
            loadUserInfo();
        }

        // Load user information
        async function loadUserInfo() {
            try {
                const response = await fetch('/api/auth/me', {
                    headers: {
                        'Authorization': 'Bearer ' + localStorage.getItem('session_token')
                    }
                });
                
                if (!response.ok) throw new Error('Not authenticated');
                
                const data = await response.json();
                currentUser = data;
                loadServers();
                updateStats();
            } catch (error) {
                logout();
            }
        }

        // Load user's servers
        async function loadServers() {
            try {
                const response = await fetch('/api/servers', {
                    headers: {
                        'Authorization': 'Bearer ' + localStorage.getItem('session_token')
                    }
                });
                
                if (!response.ok) throw new Error('Failed to load servers');
                
                userServers = await response.json();
                renderServers();
            } catch (error) {
                console.error('Error loading servers:', error);
            }
        }

        // Render servers list
        function renderServers() {
            const serversList = document.getElementById('servers-list');
            const allServersList = document.getElementById('all-servers-list');
            
            serversList.innerHTML = '';
            allServersList.innerHTML = '';

            userServers.forEach(server => {
                const serverCard = createServerCard(server);
                serversList.appendChild(serverCard);
                allServersList.appendChild(serverCard.cloneNode(true));
            });

            document.getElementById('total-servers').textContent = userServers.length;
            document.getElementById('active-servers').textContent = userServers.filter(s => s.status === 'running').length;
        }

        // Create server card element
        function createServerCard(server) {
            const card = document.createElement('div');
            card.className = 'server-card';
            
            const icon = getServerIcon(server.type);
            const statusClass = server.status === 'running' ? 'status-online' : 'status-offline';
            
            card.innerHTML = `
                <div class="server-header">
                    <div>
                        <i class="${icon} server-icon"></i>
                        <strong>${server.name}</strong>
                    </div>
                    <span class="server-status ${statusClass}">${server.status.toUpperCase()}</span>
                </div>
                <div class="server-info">
                    <div class="info-row">
                        <span>Type:</span>
                        <span>${server.type.toUpperCase()}</span>
                    </div>
                    <div class="info-row">
                        <span>CPU:</span>
                        <span>${server.resources.cpu} cores</span>
                    </div>
                    <div class="info-row">
                        <span>Memory:</span>
                        <span>${server.resources.memory} MB</span>
                    </div>
                    <div class="info-row">
                        <span>Disk:</span>
                        <span>${server.resources.disk} MB</span>
                    </div>
                </div>
                <div class="server-actions">
                    <button class="btn ${server.status === 'running' ? 'btn-danger' : 'btn-success'}" 
                            onclick="controlServer('${server.id}', '${server.status === 'running' ? 'stop' : 'start'}')">
                        ${server.status === 'running' ? 'Stop' : 'Start'}
                    </button>
                    <button class="btn btn-warning" onclick="controlServer('${server.id}', 'restart')">Restart</button>
                </div>
            `;
            
            return card;
        }

        // Get server icon based on type
        function getServerIcon(type) {
            const icons = {
                'fivem': 'fas fa-car',
                'minecraft': 'fas fa-cube',
                'python': 'fab fa-python',
                'node': 'fab fa-node-js'
            };
            return icons[type] || 'fas fa-server';
        }

        // Update resource limits based on server type
        function updateResourceLimits() {
            const type = document.getElementById('server-type').value;
            const cpuSlider = document.getElementById('cpu-cores');
            const memorySlider = document.getElementById('memory-limit');
            const nodeGroup = document.getElementById('node-version-group');
            const pythonGroup = document.getElementById('python-version-group');

            // Hide all version selects
            nodeGroup.style.display = 'none';
            pythonGroup.style.display = 'none';

            // Set default limits based on server type
            switch(type) {
                case 'fivem':
                    cpuSlider.value = 4;
                    memorySlider.value = 4096;
                    break;
                case 'minecraft':
                    cpuSlider.value = 2;
                    memorySlider.value = 2048;
                    break;
                case 'python':
                    cpuSlider.value = 1;
                    memorySlider.value = 1024;
                    pythonGroup.style.display = 'block';
                    break;
                case 'node':
                    cpuSlider.value = 1;
                    memorySlider.value = 512;
                    nodeGroup.style.display = 'block';
                    break;
            }

            updateResourceDisplays();
        }

        // Update resource value displays
        function updateResourceDisplays() {
            document.getElementById('cpu-display').textContent = document.getElementById('cpu-cores').value + ' cores';
            document.getElementById('memory-display').textContent = document.getElementById('memory-limit').value + ' MB';
            document.getElementById('disk-display').textContent = document.getElementById('disk-limit').value + ' MB';
        }

        // Create new server
        async function createServer() {
            const formData = {
                name: document.getElementById('server-name').value,
                type: document.getElementById('server-type').value,
                resources: {
                    cpu: parseInt(document.getElementById('cpu-cores').value),
                    memory: parseInt(document.getElementById('memory-limit').value),
                    disk: parseInt(document.getElementById('disk-limit').value)
                },
                version: document.getElementById('server-type').value === 'node' ? 
                    document.getElementById('node-version').value :
                    document.getElementById('server-type').value === 'python' ?
                    document.getElementById('python-version').value : null
            };

            try {
                const response = await fetch('/api/servers/create', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': 'Bearer ' + localStorage.getItem('session_token')
                    },
                    body: JSON.stringify(formData)
                });

                if (!response.ok) throw new Error('Failed to create server');

                const newServer = await response.json();
                userServers.push(newServer);
                renderServers();
                closeModal('createServerModal');
                document.getElementById('create-server-form').reset();
            } catch (error) {
                alert('Error creating server: ' + error.message);
            }
        }

        // Control server (start/stop/restart)
        async function controlServer(serverId, action) {
            try {
                const response = await fetch('/api/servers/control', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': 'Bearer ' + localStorage.getItem('session_token')
                    },
                    body: JSON.stringify({
                        server_id: serverId,
                        action: action
                    })
                });

                if (!response.ok) throw new Error('Failed to control server');

                loadServers(); // Reload servers to update status
            } catch (error) {
                alert('Error controlling server: ' + error.message);
            }
        }

        // Update system stats
        async function updateStats() {
            try {
                const response = await fetch('/api/stats', {
                    headers: {
                        'Authorization': 'Bearer ' + localStorage.getItem('session_token')
                    }
                });
                
                const data = await response.json();
                document.getElementById('cpu-usage').textContent = data.cpu + '%';
                document.getElementById('memory-usage').textContent = data.memory + '%';
            } catch (error) {
                console.error('Error updating stats:', error);
            }
        }

        // UI Functions
        function showSection(sectionName) {
            document.querySelectorAll('.menu-item').forEach(item => {
                item.classList.remove('active');
            });
            event.target.closest('.menu-item').classList.add('active');

            document.getElementById('dashboard-section').style.display = 'none';
            document.getElementById('servers-section').style.display = 'none';
            document.getElementById('settings-section').style.display = 'none';
            
            document.getElementById(sectionName + '-section').style.display = 'block';
        }

        function showModal(modalId) {
            document.getElementById(modalId).style.display = 'block';
        }

        function closeModal(modalId) {
            document.getElementById(modalId).style.display = 'none';
        }

        function toggleTheme() {
            const currentTheme = document.documentElement.getAttribute('data-theme');
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
            document.documentElement.setAttribute('data-theme', newTheme);
            
            const icon = document.querySelector('.theme-toggle i');
            icon.className = newTheme === 'dark' ? 'fas fa-moon' : 'fas fa-sun';
        }

        function logout() {
            localStorage.removeItem('session_token');
            window.location.href = '/login.html';
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            checkAuth();
            
            // Add event listeners for resource sliders
            document.getElementById('cpu-cores').addEventListener('input', updateResourceDisplays);
            document.getElementById('memory-limit').addEventListener('input', updateResourceDisplays);
            document.getElementById('disk-limit').addEventListener('input', updateResourceDisplays);

            // Update stats every 5 seconds
            setInterval(updateStats, 5000);
        });

        // Close modal when clicking outside
        window.onclick = function(event) {
            if (event.target.classList.contains('modal')) {
                event.target.style.display = 'none';
            }
        }
    </script>
</body>
</html>
EOF

    # Strona logowania
    cat > "$WEB_DIR/login.html" << 'EOF'
